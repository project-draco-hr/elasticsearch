def format_issues_html(issues, title='Fix'):
    response = ''
    if (len(issues) > 0):
        response += ('<h2>%s</h2>\n<ul>\n' % title)
        for issue in issues:
            response += ('<li>[<a href="%s">%s</a>] - %s\n' % (issue.html_url, issue.number, issue.title))
        response += '</ul>\n'
    return response
