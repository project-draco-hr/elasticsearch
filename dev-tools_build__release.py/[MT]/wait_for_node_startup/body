def wait_for_node_startup(host='127.0.0.1', port=9200, timeout=15):
    conn = HTTPConnection(host, port, timeout)
    for _ in range(timeout):
        try:
            time.sleep(1)
            conn.request('GET', '')
            res = conn.getresponse()
            if (res.status == 200):
                return True
        except:
            pass
    return False
