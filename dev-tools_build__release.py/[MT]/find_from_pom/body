def find_from_pom(tag):
    with open(POM_FILE, encoding='utf-8') as file:
        for line in file:
            match = re.search(('<%s>(.+)</%s>' % (tag, tag)), line)
            if match:
                return match.group(1)
        raise RuntimeError(('Could not find <%s> in pom.xml file' % tag))
