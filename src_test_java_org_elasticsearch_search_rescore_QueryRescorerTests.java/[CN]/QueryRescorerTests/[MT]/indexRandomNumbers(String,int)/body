{
  Builder builder=ImmutableSettings.settingsBuilder().put(indexSettings()).put(SETTING_NUMBER_OF_REPLICAS,between(0,1));
  if (shards > 0) {
    builder.put(SETTING_NUMBER_OF_SHARDS,shards);
  }
  client().admin().indices().prepareCreate("test").addMapping("type1",jsonBuilder().startObject().startObject("type1").startObject("properties").startObject("field1").field("analyzer",analyzer).field("type","string").endObject().endObject().endObject().endObject()).setSettings(builder).get();
  int numDocs=atLeast(100);
  IndexRequestBuilder[] docs=new IndexRequestBuilder[numDocs];
  for (int i=0; i < numDocs; i++) {
    docs[i]=client().prepareIndex("test","type1",String.valueOf(i)).setSource("field1",English.intToEnglish(i));
  }
  indexRandom(true,docs);
  ensureGreen();
  return numDocs;
}
