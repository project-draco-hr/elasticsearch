{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").startObject("properties").endObject().endObject().endObject().string();
  DocumentMapper defaultMapper=MapperTests.newParser().parse(mapping);
  ParsedDocument doc=defaultMapper.parse("type","1",XContentFactory.jsonBuilder().startObject().field("date_field","2011/01/22 00:00:00 +02").endObject().copiedBytes());
  FieldMapper fieldMapper=defaultMapper.mappers().smartNameFieldMapper("date_field");
  assertThat(fieldMapper,instanceOf(DateFieldMapper.class));
}
