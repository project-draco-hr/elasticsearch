{
  builder.startObject(TermQueryParser.NAME);
  if (boost == -1 && queryName == null) {
    builder.field(name,value);
  }
 else {
    builder.startObject(name);
    builder.field("value",value);
    if (boost != -1) {
      builder.field("boost",boost);
    }
    if (queryName != null) {
      builder.field("_name",queryName);
    }
    builder.endObject();
  }
  builder.endObject();
}
