{
  HotThreads hotThreads=new HotThreads().busiestThreads(request.request.threads).type(request.request.type).interval(request.request.interval);
  try {
    return new NodeHotThreads(clusterService.state().nodes().localNode(),hotThreads.detect());
  }
 catch (  Exception e) {
    throw new ElasticSearchException("failed to detect hot threads",e);
  }
}
