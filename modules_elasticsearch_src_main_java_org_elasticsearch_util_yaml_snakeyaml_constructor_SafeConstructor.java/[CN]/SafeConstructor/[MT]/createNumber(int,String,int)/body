{
  Number result;
  if (sign < 0) {
    number="-" + number;
  }
  try {
    result=Integer.valueOf(number,radix);
  }
 catch (  NumberFormatException e) {
    try {
      result=Long.valueOf(number,radix);
    }
 catch (    NumberFormatException e1) {
      result=new BigInteger(number,radix);
    }
  }
  return result;
}
