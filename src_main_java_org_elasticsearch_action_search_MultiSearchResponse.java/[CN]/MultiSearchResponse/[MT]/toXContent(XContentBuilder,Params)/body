{
  builder.startArray(Fields.RESPONSES);
  for (  Item item : items) {
    if (item.isFailure()) {
      builder.startObject();
      builder.field(Fields.ERROR,item.failureMessage());
      builder.endObject();
    }
 else {
      builder.startObject();
      item.response().toXContent(builder,params);
      builder.endObject();
    }
  }
  builder.endArray();
  return builder;
}
