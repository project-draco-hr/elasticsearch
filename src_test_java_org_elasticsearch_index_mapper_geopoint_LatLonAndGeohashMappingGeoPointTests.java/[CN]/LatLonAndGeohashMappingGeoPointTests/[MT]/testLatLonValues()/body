{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").startObject("properties").startObject("point").field("type","geo_point").field("lat_lon",true).field("geohash",true).endObject().endObject().endObject().endObject().string();
  DocumentMapper defaultMapper=MapperTests.newParser().parse(mapping);
  ParsedDocument doc=defaultMapper.parse("type","1",XContentFactory.jsonBuilder().startObject().startObject("point").field("lat",1.2).field("lon",1.3).endObject().endObject().copiedBytes());
  assertThat(doc.rootDoc().getFieldable("point.lat"),notNullValue());
  assertThat(doc.rootDoc().getFieldable("point.lon"),notNullValue());
  assertThat(doc.rootDoc().get("point.geohash"),equalTo(GeoHashUtils.encode(1.2,1.3)));
}
