{
  ShardDeleteRequest request=shardRequest.request;
  IndexShard indexShard=indicesService.indexServiceSafe(shardRequest.request.index()).shardSafe(shardRequest.shardId);
  Engine.Delete delete=indexShard.prepareDelete(request.type(),request.id(),request.version()).origin(Engine.Operation.Origin.PRIMARY);
  indexShard.delete(delete);
  request.version(delete.version());
  if (request.refresh()) {
    try {
      indexShard.refresh(new Engine.Refresh().force(false).source("refresh_flag_delete"));
    }
 catch (    Exception e) {
    }
  }
  ShardDeleteResponse response=new ShardDeleteResponse(delete.version(),delete.notFound());
  return new PrimaryResponse<ShardDeleteResponse,ShardDeleteRequest>(shardRequest.request,response,null);
}
