{
  assertThat(query,either(instanceOf(BoostQuery.class)).or(instanceOf(TermQuery.class)).or(instanceOf(AllTermQuery.class)).or(instanceOf(BooleanQuery.class)).or(instanceOf(DisjunctionMaxQuery.class)).or(instanceOf(FuzzyQuery.class)).or(instanceOf(MultiPhrasePrefixQuery.class)).or(instanceOf(MatchAllDocsQuery.class)).or(instanceOf(ExtendedCommonTermsQuery.class)).or(instanceOf(MatchNoDocsQuery.class)).or(instanceOf(PhraseQuery.class)));
}
