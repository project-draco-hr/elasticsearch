{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("tweet").startObject("properties").startObject("name").field("type","string").field("index","analyzed").startObject("fields").startObject("raw").field("type","keyword").endObject().endObject().endObject().endObject().endObject().endObject().string();
  createIndex("test").mapperService().documentMapperParser().parse("tweet",new CompressedXContent(mapping));
}
