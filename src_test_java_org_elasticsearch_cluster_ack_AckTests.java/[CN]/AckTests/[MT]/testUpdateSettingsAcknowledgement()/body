{
  createIndex("test");
  assertAcked(client().admin().indices().prepareUpdateSettings("test").setSettings(ImmutableSettings.builder().put("refresh_interval",9999,TimeUnit.MILLISECONDS)));
  for (  Client client : clients()) {
    String refreshInterval=getLocalClusterState(client).metaData().index("test").settings().get("index.refresh_interval");
    assertThat(refreshInterval,equalTo("9999ms"));
  }
}
