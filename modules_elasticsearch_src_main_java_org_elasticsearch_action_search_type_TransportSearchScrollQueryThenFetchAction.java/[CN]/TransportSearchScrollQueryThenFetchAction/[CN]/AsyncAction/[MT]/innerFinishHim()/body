{
  InternalSearchResponse internalResponse=searchPhaseController.merge(sortedShardList,queryResults,fetchResults);
  String scrollId=null;
  if (request.scroll() != null) {
    scrollId=request.scrollId();
  }
  invokeListener(new SearchResponse(internalResponse,scrollId,this.scrollId.values().length,successfulOps.get(),System.currentTimeMillis() - startTime,buildShardFailures(shardFailures,searchCache)));
  searchCache.releaseQueryResults(queryResults);
  searchCache.releaseFetchResults(fetchResults);
}
