{
  if (value != null) {
    String term;
    if (value instanceof BytesRef) {
      term=((BytesRef)value).utf8ToString();
    }
 else {
      term=value.toString();
    }
    long[] fromTo;
    if (term.contains("/")) {
      fromTo=Cidrs.cidrMaskToMinMax(term);
    }
 else {
      fromTo=Cidrs.cidrMaskToMinMax(term + "/32");
    }
    if (fromTo != null) {
      return rangeQuery(fromTo[0] == 0 ? null : fromTo[0],fromTo[1] == InternalIPv4Range.MAX_IP ? null : fromTo[1],true,false);
    }
  }
  return super.termQuery(value,context);
}
