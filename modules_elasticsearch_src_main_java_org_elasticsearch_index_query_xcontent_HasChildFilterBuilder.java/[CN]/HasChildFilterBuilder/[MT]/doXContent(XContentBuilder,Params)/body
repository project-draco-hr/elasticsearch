{
  builder.startObject(HasChildFilterParser.NAME);
  builder.field("query");
  queryBuilder.toXContent(builder,params);
  builder.field("type",childType);
  if (scope != null) {
    builder.field("scope",scope);
  }
  if (filterName != null) {
    builder.field("_name",filterName);
  }
  builder.endObject();
}
