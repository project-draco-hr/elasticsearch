{
  if (follow) {
    if (target.equals(SYSTEM_ERR)) {
      setWriter(createWriter(new SystemErrStream()));
    }
 else {
      setWriter(createWriter(new SystemOutStream()));
    }
  }
 else {
    if (target.equals(SYSTEM_ERR)) {
      setWriter(createWriter(System.err));
    }
 else {
      setWriter(createWriter(System.out));
    }
  }
  super.activateOptions();
}
