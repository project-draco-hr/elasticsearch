{
  final StringBuilder information=new StringBuilder().append("- Plugin information:\n").append("Name: ").append(name).append("\n").append("Description: ").append(description).append("\n").append("Site: ").append(site).append("\n").append("Version: ").append(version).append("\n").append("JVM: ").append(jvm).append("\n");
  if (jvm) {
    information.append(" * Classname: ").append(classname).append("\n");
    information.append(" * Isolated: ").append(isolated);
  }
  return information.toString();
}
