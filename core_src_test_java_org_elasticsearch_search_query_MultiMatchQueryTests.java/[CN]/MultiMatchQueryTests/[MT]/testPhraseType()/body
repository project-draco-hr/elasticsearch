{
  SearchResponse searchResponse=client().prepareSearch("test").setQuery(randomizeType(multiMatchQuery("Man the Ultimate","full_name_phrase","first_name_phrase","last_name_phrase","category_phrase").operator(Operator.OR).type(MatchQueryBuilder.Type.PHRASE))).get();
  assertFirstHit(searchResponse,hasId("ultimate2"));
  assertHitCount(searchResponse,1l);
  searchResponse=client().prepareSearch("test").setQuery(randomizeType(multiMatchQuery("Captain","full_name_phrase","first_name_phrase","last_name_phrase","category_phrase").operator(Operator.OR).type(MatchQueryBuilder.Type.PHRASE))).get();
  assertThat(searchResponse.getHits().getTotalHits(),greaterThan(1l));
  searchResponse=client().prepareSearch("test").setQuery(randomizeType(multiMatchQuery("the Ul","full_name_phrase","first_name_phrase","last_name_phrase","category_phrase").operator(Operator.OR).type(MatchQueryBuilder.Type.PHRASE_PREFIX))).get();
  assertSearchHits(searchResponse,"ultimate2","ultimate1");
  assertHitCount(searchResponse,2l);
}
