{
  DiscoveryNodes nodes=clusterService.state().nodes();
  if (nodes.localNodeMaster()) {
    threadPool.execute(new Runnable(){
      @Override public void run(){
        innerNodeIndexDeleted(index,nodeId);
      }
    }
);
  }
 else {
    transportService.sendRequest(clusterService.state().nodes().masterNode(),NodeIndexDeletedTransportHandler.ACTION,new NodeIndexDeletedMessage(index,nodeId),VoidTransportResponseHandler.INSTANCE);
  }
}
