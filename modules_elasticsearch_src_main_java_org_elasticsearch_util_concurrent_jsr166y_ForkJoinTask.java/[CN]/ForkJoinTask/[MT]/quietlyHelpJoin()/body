{
  ForkJoinWorkerThread w=(ForkJoinWorkerThread)Thread.currentThread();
  if (!w.unpushTask(this) || !tryExec()) {
    while (status >= 0) {
      ForkJoinTask<?> t=w.scanWhileJoining(this);
      if (t == null) {
        if (status >= 0)         awaitDone(w);
        break;
      }
      t.tryExec();
    }
  }
}
