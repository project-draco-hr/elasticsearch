{
  if (requestExternalSignal() >= 0) {
    boolean interrupted=false;
    while (status >= 0) {
      try {
synchronized (this) {
          if (status >= 0)           wait();
 else {
            notifyAll();
            break;
          }
        }
      }
 catch (      InterruptedException ie) {
        interrupted=true;
      }
    }
    if (interrupted)     Thread.currentThread().interrupt();
  }
}
