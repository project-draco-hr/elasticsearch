{
  int s;
  while ((s=status) >= 0) {
    if (UNSAFE.compareAndSwapInt(this,statusOffset,s,completion)) {
      if ((s & SIGNAL_MASK) != 0) {
        Thread t=Thread.currentThread();
        if (t instanceof ForkJoinWorkerThread)         ((ForkJoinWorkerThread)t).pool.updateRunningCount(s & INTERNAL_SIGNAL_MASK);
synchronized (this) {
          notifyAll();
        }
      }
      return;
    }
  }
}
