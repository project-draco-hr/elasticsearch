{
  Polygon polygon=ShapeBuilders.newPolygon(new PointListBuilder().point(new Coordinate(-45,30)).point(new Coordinate(45,30)).point(new Coordinate(45,-30)).point(new Coordinate(-45,-30)).point(new Coordinate(-45,30)).list()).toPolygon();
  LineString exterior=polygon.getExteriorRing();
  assertEquals(exterior.getCoordinateN(0),new Coordinate(-45,30));
  assertEquals(exterior.getCoordinateN(1),new Coordinate(45,30));
  assertEquals(exterior.getCoordinateN(2),new Coordinate(45,-30));
  assertEquals(exterior.getCoordinateN(3),new Coordinate(-45,-30));
}
