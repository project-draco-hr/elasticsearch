{
  PolygonBuilder builder=ShapeBuilders.newPolygon(new PointListBuilder().point(180,0).point(176,4).point(-176,4).point(180,0).list());
  Shape shape=builder.close().build();
  assertPolygon(shape);
  builder=ShapeBuilders.newPolygon(new PointListBuilder().point(180,0).point(-176,4).point(176,4).point(180,0).list());
  shape=builder.close().build();
  assertMultiPolygon(shape);
}
