{
  PolygonBuilder builder=ShapeBuilders.newPolygon().point(180,0).point(176,4).point(180,-4).point(180,0);
  Shape shape=builder.close().build();
  assertPolygon(shape);
  builder=ShapeBuilders.newPolygon().point(-176,4).point(-180,0).point(-180,-4).point(-176,4);
  shape=builder.close().build();
  assertPolygon(shape);
}
