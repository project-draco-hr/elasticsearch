{
  IndexShard indexShard=indicesService.indexServiceSafe(request.index()).shardSafe(request.shardId());
  boolean valid=indexShard.validate(request.querySource(),request.querySourceOffset(),request.querySourceLength(),request.filteringAliases(),request.types());
  return new ShardValidateResponse(request.index(),request.shardId(),valid);
}
