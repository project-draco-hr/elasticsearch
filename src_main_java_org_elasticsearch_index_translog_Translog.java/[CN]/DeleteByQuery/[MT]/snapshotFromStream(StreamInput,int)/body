{
  final BufferedChecksumStreamInput checksumStreamInput=new BufferedChecksumStreamInput(input);
  return new Snapshot(){
    int read=0;
    @Override public int estimatedTotalOperations(){
      return numOps;
    }
    @Override public Operation next() throws IOException {
      if (read < numOps) {
        read++;
        return readOperation(checksumStreamInput);
      }
      return null;
    }
    @Override public void close(){
    }
  }
;
}
