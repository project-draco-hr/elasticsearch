{
  prepareCreate("test").setSettings(settingsBuilder().put("index.number_of_shards",1)).execute().actionGet();
  ensureGreen();
  client().prepareIndex("test","test","1").setSource("field1","value1").execute().actionGet();
  logger.info("--> register a query");
  client().prepareIndex("my-queries-index",PercolatorService.TYPE_NAME,"kuku").setSource(jsonBuilder().startObject().field("color","blue").field("query",termQuery("field1","value1")).endObject()).setRefresh(true).execute().actionGet();
  wipeIndex("test");
  prepareCreate("test").setSettings(settingsBuilder().put("index.number_of_shards",1)).execute().actionGet();
  ensureGreen();
  client().prepareIndex("test","test","1").setSource("field1","value1").execute().actionGet();
  logger.info("--> register a query");
  client().prepareIndex("my-queries-index",PercolatorService.TYPE_NAME,"kuku").setSource(jsonBuilder().startObject().field("color","blue").field("query",termQuery("field1","value1")).endObject()).setRefresh(true).execute().actionGet();
}
