{
  XContentParser.Token t=parser.currentToken();
  if (t == null) {
    t=parser.nextToken();
  }
  if (t == XContentParser.Token.START_OBJECT) {
    t=parser.nextToken();
  }
  String routingPart=routing().pathElements()[location];
  for (; t == XContentParser.Token.FIELD_NAME; t=parser.nextToken()) {
    String fieldName=parser.currentName();
    t=parser.nextToken();
    if (routingPart.equals(fieldName)) {
      if (location + 1 == routing.pathElements().length) {
        return parser.textOrNull();
      }
      if (t == XContentParser.Token.START_OBJECT) {
        return parseRouting(parser,location + 1);
      }
    }
 else {
      parser.skipChildren();
    }
  }
  return null;
}
