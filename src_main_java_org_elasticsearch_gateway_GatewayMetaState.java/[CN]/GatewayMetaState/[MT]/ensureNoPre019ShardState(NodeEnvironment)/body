{
  for (  Path dataLocation : nodeEnv.nodeDataPaths()) {
    final Path stateLocation=dataLocation.resolve(MetaDataStateFormat.STATE_DIR_NAME);
    if (Files.exists(stateLocation)) {
      try (DirectoryStream<Path> stream=Files.newDirectoryStream(stateLocation,"shards-*")){
        for (        Path stateFile : stream) {
          throw new ElasticsearchIllegalStateException("Detected pre 0.19 shard state file please upgrade to a version before " + Version.CURRENT.minimumCompatibilityVersion() + " first to upgrade state structures - shard state found: ["+ stateFile.getParent().toAbsolutePath());
        }
      }
     }
  }
}
