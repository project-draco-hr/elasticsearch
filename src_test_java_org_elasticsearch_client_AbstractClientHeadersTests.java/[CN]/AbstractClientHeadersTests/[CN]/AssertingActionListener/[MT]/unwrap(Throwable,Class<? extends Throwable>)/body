{
  int counter=0;
  Throwable result=t;
  while (!exceptionType.isInstance(result)) {
    if (result.getCause() == null) {
      return null;
    }
    if (result.getCause() == result) {
      return null;
    }
    if (counter++ > 10) {
      fail("Exception cause unwrapping ran for 10 levels: " + Throwables.getStackTraceAsString(t));
      return null;
    }
    result=result.getCause();
  }
  return result;
}
