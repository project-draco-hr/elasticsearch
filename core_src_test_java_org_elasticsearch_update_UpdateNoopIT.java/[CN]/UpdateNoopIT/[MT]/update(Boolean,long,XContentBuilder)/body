{
  UpdateRequestBuilder updateRequest=client().prepareUpdate("test","type1","1").setDoc(xContentBuilder.bytes().toUtf8()).setDocAsUpsert(true).setFields("_source");
  if (detectNoop != null) {
    updateRequest.setDetectNoop(detectNoop);
  }
  UpdateResponse updateResponse=updateRequest.get();
  assertThat(updateResponse.getGetResult(),notNullValue());
  assertEquals(expectedVersion,updateResponse.getVersion());
  return updateResponse;
}
