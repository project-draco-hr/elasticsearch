{
  if (!getEngine().refreshNeeded()) {
    reschedule();
    return;
  }
  threadPool.executor(ThreadPool.Names.REFRESH).execute(new Runnable(){
    @Override public void run(){
      try {
        if (getEngine().refreshNeeded()) {
          refresh("schedule");
        }
      }
 catch (      Exception e) {
        handleRefreshException(e);
      }
      reschedule();
    }
  }
);
}
