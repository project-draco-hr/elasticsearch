{
  this.method=method;
  this.uri=uri;
  this.uriBytes=uriBytes;
  this.dataSize=dataSize;
  this.binary=binary;
  this.params=new HashMap<String,String>();
  int pathEndPos=uri.indexOf('?');
  if (pathEndPos < 0) {
    this.path=uri;
  }
 else {
    this.path=uri.substring(0,pathEndPos);
    RestUtils.decodeQueryString(uri,pathEndPos + 1,params);
  }
}
