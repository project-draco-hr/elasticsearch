{
  for (int i=0; i < 10; i++) {
    if (node("node" + i) != null) {
      node("node" + i).stop();
      if (((InternalNode)node("node" + i)).injector().getInstance(NodeEnvironment.class).hasNodeFile()) {
        ((InternalNode)node("node" + i)).injector().getInstance(Gateway.class).reset();
      }
    }
  }
  closeAllNodes(false);
}
