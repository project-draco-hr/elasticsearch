{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").endObject().endObject().string();
  DocumentMapper docMapper=createIndex("test").mapperService().documentMapperParser().parse("type",new CompressedXContent(mapping));
  try {
    docMapper.parse(SourceToParse.source("test","type","1",XContentFactory.jsonBuilder().startObject().field("_id","1").endObject().bytes()));
    fail("Expected failure to parse metadata field");
  }
 catch (  MapperParsingException e) {
    assertTrue(e.getMessage(),e.getMessage().contains("Field [_id] is a metadata field and cannot be added inside a document"));
  }
}
