{
  if (this.stats == null) {
    return null;
  }
  TermSpans spans=(TermSpans)query.getSpans(context,acceptDocs,termContexts);
  if (spans == null) {
    return null;
  }
  SimScorer sloppySimScorer=similarity.simScorer(stats,context);
  return new AllTermSpanScorer(spans,this,sloppySimScorer);
}
