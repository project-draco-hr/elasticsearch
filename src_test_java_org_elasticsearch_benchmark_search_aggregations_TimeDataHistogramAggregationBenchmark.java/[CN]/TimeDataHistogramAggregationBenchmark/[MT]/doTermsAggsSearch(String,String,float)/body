{
  SearchResponse response=client.prepareSearch().setSize(0).setQuery(QueryBuilders.constantScoreQuery(FilterBuilders.scriptFilter("random()<matchP").addParam("matchP",matchPercentage))).addAggregation(AggregationBuilders.histogram(name).field(field).interval(3600 * 1000)).get();
  if (response.getHits().totalHits() < COUNT * matchPercentage * 0.7) {
    System.err.println("--> warning - big deviation from expected count: " + response.getHits().totalHits() + " expected: "+ COUNT * matchPercentage);
  }
  return response;
}
