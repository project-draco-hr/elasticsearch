{
  float score=0;
  ScriptTerms scriptTerms=shardTerms().get(field);
  for (int i=0; i < terms.length; i++) {
    ScriptTerm scriptTerm=scriptTerms.get(terms[i]);
    try {
      if (scriptTerm.tf() != 0) {
        score+=scriptTerm.tf() * scriptTerms.docCount() / scriptTerm.df();
      }
    }
 catch (    IOException e) {
      throw new RuntimeException();
    }
  }
  return score;
}
