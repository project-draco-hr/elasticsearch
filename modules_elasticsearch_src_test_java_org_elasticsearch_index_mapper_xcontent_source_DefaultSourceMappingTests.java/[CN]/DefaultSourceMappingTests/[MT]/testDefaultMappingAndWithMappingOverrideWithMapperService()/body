{
  String defaultMapping=XContentFactory.jsonBuilder().startObject().startObject(MapperService.DEFAULT_MAPPING).startObject("_source").field("enabled",false).endObject().endObject().endObject().string();
  MapperService mapperService=MapperTests.newMapperService();
  mapperService.add(MapperService.DEFAULT_MAPPING,defaultMapping);
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").startObject("_source").field("enabled",true).endObject().endObject().endObject().string();
  mapperService.add("my_type",mapping);
  XContentDocumentMapper mapper=(XContentDocumentMapper)mapperService.type("my_type");
  assertThat(mapper.type(),equalTo("my_type"));
  assertThat(mapper.sourceMapper().enabled(),equalTo(true));
}
