{
  SearchResponse response=client().prepareSearch("idx_unmapped").setTypes("type").addAggregation(terms("terms").executionHint(randomExecutionHint()).size(randomInt(5)).field("value")).execute().actionGet();
  assertSearchResponse(response);
  Terms terms=response.getAggregations().get("terms");
  assertThat(terms,notNullValue());
  assertThat(terms.getName(),equalTo("terms"));
  assertThat(terms.buckets().size(),equalTo(0));
}
