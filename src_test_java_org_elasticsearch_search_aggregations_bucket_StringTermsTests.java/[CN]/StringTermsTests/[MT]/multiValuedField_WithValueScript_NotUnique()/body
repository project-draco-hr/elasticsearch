{
  SearchResponse response=client().prepareSearch("idx").setTypes("type").addAggregation(terms("terms").executionHint(randomExecutionHint()).field(MULTI_VALUED_FIELD_NAME).collectMode(randomFrom(SubAggCollectionMode.values())).script(new Script("_value.substring(0,3)"))).execute().actionGet();
  assertSearchResponse(response);
  Terms terms=response.getAggregations().get("terms");
  assertThat(terms,notNullValue());
  assertThat(terms.getName(),equalTo("terms"));
  assertThat(terms.getBuckets().size(),equalTo(1));
  Terms.Bucket bucket=terms.getBucketByKey("val");
  assertThat(bucket,notNullValue());
  assertThat(key(bucket),equalTo("val"));
  assertThat(bucket.getDocCount(),equalTo(5l));
}
