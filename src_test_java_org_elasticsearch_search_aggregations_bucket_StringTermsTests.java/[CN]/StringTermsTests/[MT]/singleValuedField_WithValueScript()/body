{
  SearchResponse response=client().prepareSearch("idx").setTypes("type").addAggregation(terms("terms").executionHint(randomAllExecutionHint()).field(SINGLE_VALUED_FIELD_NAME).script("'foo_' + _value")).execute().actionGet();
  assertSearchResponse(response);
  Terms terms=response.getAggregations().get("terms");
  assertThat(terms,notNullValue());
  assertThat(terms.getName(),equalTo("terms"));
  assertThat(terms.getBuckets().size(),equalTo(5));
  for (int i=0; i < 5; i++) {
    Terms.Bucket bucket=terms.getBucketByKey("foo_val" + i);
    assertThat(bucket,notNullValue());
    assertThat(key(bucket),equalTo("foo_val" + i));
    assertThat(bucket.getDocCount(),equalTo(1l));
  }
}
