{
  DocumentMapperParser mapperParser=createIndex("test").mapperService().documentMapperParser();
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").field("dynamic",false).startObject("properties").startObject("foo").field("type","object").field("dynamic",true).startObject("properties").endObject().endObject().endObject().endObject().string();
  DocumentMapper mapper=mapperParser.parse("type",new CompressedXContent(mapping));
  BytesReference bytes=XContentFactory.jsonBuilder().startObject().startObject("foo").field("bar","something").endObject().endObject().bytes();
  ParsedDocument doc=mapper.parse("test","type","1",bytes);
  assertNotNull(doc.dynamicMappingsUpdate());
  assertNotNull(doc.rootDoc().getField("foo.bar"));
}
