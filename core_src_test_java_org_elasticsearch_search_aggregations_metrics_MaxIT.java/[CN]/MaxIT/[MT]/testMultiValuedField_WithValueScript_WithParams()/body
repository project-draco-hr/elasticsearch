{
  Map<String,Object> params=new HashMap<>();
  params.put("inc",1);
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(max("max").field("values").script(new Script("_value + inc",ScriptType.INLINE,null,params))).execute().actionGet();
  assertThat(searchResponse.getHits().getTotalHits(),equalTo(10l));
  Max max=searchResponse.getAggregations().get("max");
  assertThat(max,notNullValue());
  assertThat(max.getName(),equalTo("max"));
  assertThat(max.getValue(),equalTo(13.0));
}
