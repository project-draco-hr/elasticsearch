{
  Map<String,Object> params=new HashMap<>();
  params.put("inc",1);
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(max("max").field("value").script(new Script("_value + inc",ScriptType.INLINE,null,params))).execute().actionGet();
  assertHitCount(searchResponse,10);
  Max max=searchResponse.getAggregations().get("max");
  assertThat(max,notNullValue());
  assertThat(max.getName(),equalTo("max"));
  assertThat(max.getValue(),equalTo(11.0));
}
