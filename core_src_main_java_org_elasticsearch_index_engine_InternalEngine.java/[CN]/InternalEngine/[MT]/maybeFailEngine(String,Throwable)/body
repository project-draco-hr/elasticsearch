{
  boolean shouldFail=super.maybeFailEngine(source,t);
  if (shouldFail) {
    return true;
  }
  if (t instanceof AlreadyClosedException) {
    if (indexWriter.isOpen() == false && indexWriter.getTragicException() != null) {
      failEngine("already closed by tragic event on the index writer",indexWriter.getTragicException());
    }
 else     if (translog.isOpen() == false && translog.getTragicException() != null) {
      failEngine("already closed by tragic event on the translog",translog.getTragicException());
    }
    return true;
  }
 else   if (t != null && ((indexWriter.isOpen() == false && indexWriter.getTragicException() == t) || (translog.isOpen() == false && translog.getTragicException() == t))) {
    failEngine(source,t);
    return true;
  }
  return false;
}
