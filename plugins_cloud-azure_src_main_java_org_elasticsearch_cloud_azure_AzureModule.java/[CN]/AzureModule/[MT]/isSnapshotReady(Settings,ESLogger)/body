{
  if (!isCloudReady(settings)) {
    logger.trace("cloud settings are disabled");
    return false;
  }
  if (isPropertyMissing(settings,Storage.ACCOUNT) || isPropertyMissing(settings,Storage.KEY)) {
    logger.debug("azure repository is not set using [{}] and [{}] properties",Storage.ACCOUNT,Storage.KEY);
    return false;
  }
  logger.trace("all required properties for azure repository are set!");
  return true;
}
