{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").startObject("properties").startObject("point").field("type","geo_point").field("lat_lon",true).field("geohash",true).endObject().endObject().endObject().endObject().string();
  DocumentMapper defaultMapper=createIndex("test").mapperService().documentMapperParser().parse(mapping);
  ParsedDocument doc=defaultMapper.parse("test","type","1",XContentFactory.jsonBuilder().startObject().field("point",GeoHashUtils.stringEncode(1.3,1.2)).endObject().bytes());
  assertThat(doc.rootDoc().getField("point.lat"),notNullValue());
  assertThat(doc.rootDoc().getField("point.lon"),notNullValue());
  assertThat(doc.rootDoc().get("point.geohash"),equalTo(GeoHashUtils.stringEncode(1.3,1.2)));
}
