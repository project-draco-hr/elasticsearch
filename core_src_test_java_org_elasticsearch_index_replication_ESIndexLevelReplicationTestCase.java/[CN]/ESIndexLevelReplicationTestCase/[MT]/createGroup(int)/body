{
  final Path homePath=createTempDir();
  Settings build=Settings.builder().put(IndexMetaData.SETTING_VERSION_CREATED,Version.CURRENT).put(IndexMetaData.SETTING_NUMBER_OF_REPLICAS,replicas).put(IndexMetaData.SETTING_NUMBER_OF_SHARDS,1).build();
  IndexMetaData metaData=IndexMetaData.builder(index.getName()).settings(build).primaryTerm(0,1).build();
  return new ReplicationGroup(metaData,homePath);
}
