{
  if (delegateLock.obtain()) {
    if (writesFiles) {
synchronized (DistributorDirectory.this) {
        assert(nameDirMapping.containsKey(name) == false || nameDirMapping.get(name) == dir);
        if (nameDirMapping.get(name) == null) {
          nameDirMapping.put(name,dir);
        }
      }
    }
    return true;
  }
 else {
    return false;
  }
}
