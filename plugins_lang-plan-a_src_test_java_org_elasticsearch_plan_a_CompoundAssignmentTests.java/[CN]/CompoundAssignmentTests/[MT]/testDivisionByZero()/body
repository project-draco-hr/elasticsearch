{
  try {
    exec("byte x = 1; x /= 0; return x;");
    fail("should have hit exception");
  }
 catch (  ArithmeticException expected) {
  }
  try {
    exec("short x = 1; x /= 0; return x;");
    fail("should have hit exception");
  }
 catch (  ArithmeticException expected) {
  }
  try {
    exec("char x = 1; x /= 0; return x;");
    fail("should have hit exception");
  }
 catch (  ArithmeticException expected) {
  }
  try {
    exec("int x = 1; x /= 0; return x;");
    fail("should have hit exception");
  }
 catch (  ArithmeticException expected) {
  }
  try {
    exec("long x = 1; x /= 0; return x;");
    fail("should have hit exception");
  }
 catch (  ArithmeticException expected) {
  }
}
