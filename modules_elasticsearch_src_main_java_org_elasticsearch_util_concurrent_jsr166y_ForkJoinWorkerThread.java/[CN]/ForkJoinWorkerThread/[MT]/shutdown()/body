{
  for (; ; ) {
    int s=runState;
    if ((s & SUSPENDED) != 0) {
      if (UNSAFE.compareAndSwapInt(this,runStateOffset,s,(s & ~SUSPENDED) | (TRIMMED | TERMINATING))) {
        LockSupport.unpark(this);
        break;
      }
    }
 else     if (UNSAFE.compareAndSwapInt(this,runStateOffset,s,s | TERMINATING))     break;
  }
}
