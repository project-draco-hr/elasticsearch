{
  SearchResponse response=client().prepareSearch("idx").setTypes("type").addAggregation(terms("terms").collectMode(randomFrom(SubAggCollectionMode.values())).script("doc['" + MULTI_VALUED_FIELD_NAME + "'].values").valueType(Terms.ValueType.LONG).subAggregation(sum("sum"))).execute().actionGet();
  assertSearchResponse(response);
  Terms terms=response.getAggregations().get("terms");
  assertThat(terms,notNullValue());
  assertThat(terms.getName(),equalTo("terms"));
  assertThat(terms.getBuckets().size(),equalTo(6));
  for (int i=0; i < 6; i++) {
    Terms.Bucket bucket=terms.getBucketByKey("" + i);
    assertThat(bucket,notNullValue());
    assertThat(key(bucket),equalTo("" + i));
    assertThat(bucket.getKeyAsNumber().intValue(),equalTo(i));
    final long count=i == 0 || i == 5 ? 1 : 2;
    double s=0;
    for (int j=0; j < NUM_DOCS; ++j) {
      if (i == j || i == j + 1) {
        s+=j;
        s+=j + 1;
      }
    }
    assertThat(bucket.getDocCount(),equalTo(count));
    Sum sum=bucket.getAggregations().get("sum");
    assertThat(sum,notNullValue());
    assertThat(sum.getValue(),equalTo(s));
  }
}
