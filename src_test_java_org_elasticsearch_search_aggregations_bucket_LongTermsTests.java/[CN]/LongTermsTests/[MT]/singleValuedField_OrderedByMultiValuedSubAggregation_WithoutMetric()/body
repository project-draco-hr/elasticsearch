{
  try {
    client().prepareSearch("idx").setTypes("type").addAggregation(terms("terms").field("value").order(Terms.Order.aggregation("stats",true)).subAggregation(stats("stats").field("value"))).execute().actionGet();
    fail("Expected search to fail when trying to sort terms aggregation by multi-valued sug-aggregation " + "where the metric name is not specified");
  }
 catch (  ElasticsearchException e) {
