{
  String defaultMapping=XContentFactory.jsonBuilder().startObject().startObject("type").endObject().endObject().string();
  DocumentMapper defaultMapper=MapperTests.newParser().parse(defaultMapping);
  ParsedDocument doc=defaultMapper.parse("type","1",XContentFactory.jsonBuilder().startObject().startObject("type").field("test1","value1").field("test2","value2").startObject("inner").field("inner_field","inner_value").endObject().endObject().endObject().copiedBytes());
  assertThat(doc.masterDoc().get("test1"),equalTo("value1"));
  assertThat(doc.masterDoc().get("test2"),equalTo("value2"));
  assertThat(doc.masterDoc().get("inner.inner_field"),equalTo("inner_value"));
}
