{
  Files.createDirectories(path);
  writer.write("permission java.io.FilePermission \"" + encode(path) + "\", \""+ permissions+ "\";");
  writer.write(System.lineSeparator());
  writer.write("permission java.io.FilePermission \"" + encode(path) + "${/}-\", \""+ permissions+ "\";");
  writer.write(System.lineSeparator());
}
