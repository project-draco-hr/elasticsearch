{
  SearchResponse sr=client().prepareSearch("test").setQuery(QueryBuilders.functionScoreQuery(ScoreFunctionBuilders.scriptFunction(new Script(scoreScript)))).execute().actionGet();
  assertHitCount(sr,numExpectedDocs);
  for (  SearchHit hit : sr.getHits().getHits()) {
    assertThat("for doc " + hit.getId(),((Float)expectedScore.get(hit.getId())).doubleValue(),Matchers.closeTo(hit.score(),1.e-4));
  }
}
