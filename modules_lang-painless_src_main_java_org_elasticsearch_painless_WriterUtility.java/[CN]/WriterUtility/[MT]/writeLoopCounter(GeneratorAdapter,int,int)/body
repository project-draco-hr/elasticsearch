{
  if (slot > -1) {
    final Label end=new Label();
    adapter.iinc(slot,-count);
    adapter.visitVarInsn(Opcodes.ILOAD,slot);
    adapter.push(0);
    adapter.ifICmp(GeneratorAdapter.GT,end);
    adapter.throwException(PAINLESS_ERROR_TYPE,"The maximum number of statements that can be executed in a loop has been reached.");
    adapter.mark(end);
  }
}
