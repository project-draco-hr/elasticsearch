{
  FixedBitSet result=null;
  TermDocs td=reader.termDocs();
  try {
    for (    Term term : terms) {
      td.seek(term);
      if (td.next()) {
        if (result == null) {
          result=new FixedBitSet(reader.maxDoc());
        }
        result.set(td.doc());
        while (td.next()) {
          result.set(td.doc());
        }
      }
    }
  }
  finally {
    td.close();
  }
  return result;
}
