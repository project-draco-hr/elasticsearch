{
  if (pathType != Defaults.PATH_TYPE) {
    builder.field("path",pathType.name().toLowerCase(Locale.ROOT));
  }
  if (!mappers.isEmpty()) {
    builder.startObject("fields");
    for (    ObjectCursor<Mapper> cursor : mappers.values()) {
      cursor.value.toXContent(builder,params);
    }
    builder.endObject();
  }
  return builder;
}
