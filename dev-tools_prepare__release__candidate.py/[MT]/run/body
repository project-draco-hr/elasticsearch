def run(command, env_vars=None, verbose=VERBOSE):
    if env_vars:
        for (key, value) in env_vars.items():
            os.putenv(key, value)
    if (not verbose):
        command = ('%s >> /dev/null 2>&1' % command)
    if os.system(command):
        raise RuntimeError(('    FAILED: %s' % command))
