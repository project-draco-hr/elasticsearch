{
  long chunkSize=shardSize.bytes() / 10;
  assertTrue(client().admin().cluster().prepareUpdateSettings().setTransientSettings(Settings.builder().put(RecoverySettings.INDICES_RECOVERY_MAX_BYTES_PER_SEC,chunkSize).put(RecoverySettings.INDICES_RECOVERY_FILE_CHUNK_SIZE,chunkSize)).get().isAcknowledged());
}
