{
  int counter=0;
  Throwable result=t;
  while (result instanceof ElasticSearchWrapperException) {
    if (result.getCause() == null) {
      return result;
    }
    if (result.getCause() == result) {
      return result;
    }
    if (counter++ > 10) {
      logger.warn("Exception cause unwrapping ran for 10 levels...",t);
      return result;
    }
    result=t.getCause();
  }
  return result;
}
