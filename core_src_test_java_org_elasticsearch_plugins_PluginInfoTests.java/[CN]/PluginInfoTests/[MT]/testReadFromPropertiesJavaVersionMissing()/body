{
  Path pluginDir=createTempDir().resolve("fake-plugin");
  writeProperties(pluginDir,"description","fake desc","elasticsearch.version",Version.CURRENT.toString(),"version","1.0","jvm","true");
  try {
    PluginInfo.readFromProperties(pluginDir);
    fail("expected missing java version exception");
  }
 catch (  IllegalArgumentException e) {
    assertTrue(e.getMessage().contains("[java.version] is missing"));
  }
}
