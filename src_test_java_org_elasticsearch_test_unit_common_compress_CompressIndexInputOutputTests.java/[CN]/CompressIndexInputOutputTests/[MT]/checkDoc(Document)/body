{
  String id=document.get("id");
  String field=document.get("field");
  int count=0;
  int idx=0;
  while (true) {
    int oldIdx=idx;
    idx=field.indexOf(' ',oldIdx);
    if (idx == -1) {
      break;
    }
    count++;
    assertThat(field.substring(oldIdx,idx),equalTo(id));
    idx++;
  }
  assertThat(count,equalTo(Integer.parseInt(document.get("count"))));
}
