{
  Recycler<T> recycler;
  try {
    recycler=type.build(c,limit);
    if (smartSize > 0) {
      recycler=new Recycler.Sizing<T>(recycler,smartSize);
    }
  }
 catch (  IllegalArgumentException ex) {
    throw new ElasticsearchIllegalArgumentException("no type support [" + type + "] for recycler");
  }
  return recycler;
}
