{
  createIndex();
  ensureGreen();
  UpdateResponse updateResponse=client().prepareUpdate("test","type1","1").setDoc(XContentFactory.jsonBuilder().startObject().field("bar","baz").endObject()).setDocAsUpsert(true).setFields("_source").execute().actionGet();
  assertThat(updateResponse.getGetResult(),notNullValue());
  assertThat(updateResponse.getGetResult().sourceAsMap().get("bar").toString(),equalTo("baz"));
}
