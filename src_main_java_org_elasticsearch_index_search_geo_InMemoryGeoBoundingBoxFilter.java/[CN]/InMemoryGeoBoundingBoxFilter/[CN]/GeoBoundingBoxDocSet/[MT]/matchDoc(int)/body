{
  if (!values.hasValue(doc)) {
    return false;
  }
  if (values.isMultiValued()) {
    GeoPointValues.Iter iter=values.getIter(doc);
    while (iter.hasNext()) {
      GeoPoint point=iter.next();
      if (topLeft.lon <= point.lon() && bottomRight.lon >= point.lon() && topLeft.lat >= point.lat() && bottomRight.lat <= point.lat()) {
        return true;
      }
    }
  }
 else {
    GeoPoint point=values.getValue(doc);
    if (topLeft.lon <= point.lon() && bottomRight.lon >= point.lon() && topLeft.lat >= point.lat() && bottomRight.lat <= point.lat()) {
      return true;
    }
  }
  return false;
}
