{
  XContentParser.Token token=parser.currentToken();
  if (token.isValue()) {
    int size=parser.intValue();
    if (size < 0) {
      throw new SearchParseException(context,"size is set to [" + size + "] and is expected to be higher or equal to 0",parser.getTokenLocation());
    }
    context.size(size);
  }
}
