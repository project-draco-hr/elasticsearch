{
  if (value == null) {
    throw new IllegalArgumentException("[" + NAME + "] requires query value");
  }
  if (fields == null) {
    throw new IllegalArgumentException("[" + NAME + "] requires fields at initalization time");
  }
  this.value=value;
  this.fieldsBoosts=new TreeMap<>();
  for (  String field : fields) {
    field(field);
  }
}
