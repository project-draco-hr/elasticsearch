{
  if ("min".equals(name)) {
    return min;
  }
 else   if ("max".equals(name)) {
    return max;
  }
 else   if ("avg".equals(name)) {
    return getAvg();
  }
 else   if ("count".equals(name)) {
    return count;
  }
 else   if ("sum".equals(name)) {
    return sum;
  }
 else {
    throw new IllegalArgumentException("Unknown value [" + name + "] in common stats aggregation");
  }
}
