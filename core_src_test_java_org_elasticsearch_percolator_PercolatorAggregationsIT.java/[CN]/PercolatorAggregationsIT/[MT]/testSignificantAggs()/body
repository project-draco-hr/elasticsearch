{
  client().admin().indices().prepareCreate(INDEX_NAME).addMapping(TYPE_NAME,"query","type=percolator").execute().actionGet();
  ensureGreen();
  PercolateRequestBuilder percolateRequestBuilder=client().preparePercolate().setIndices(INDEX_NAME).setDocumentType("type").setPercolateDoc(docBuilder().setDoc(jsonBuilder().startObject().field("field1","value").endObject())).addAggregation(AggregationBuilders.significantTerms("a").field("field2"));
  PercolateResponse response=percolateRequestBuilder.get();
  assertNoFailures(response);
}
