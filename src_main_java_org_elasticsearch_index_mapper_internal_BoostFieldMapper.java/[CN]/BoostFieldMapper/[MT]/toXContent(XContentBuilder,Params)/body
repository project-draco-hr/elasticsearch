{
  if (name().equals(Defaults.NAME) && nullValue == null && fieldType.indexed() == Defaults.FIELD_TYPE.indexed() && fieldType.stored() == Defaults.FIELD_TYPE.stored()) {
    return builder;
  }
  builder.startObject(contentType());
  if (!name().equals(Defaults.NAME)) {
    builder.field("name",name());
  }
  if (nullValue != null) {
    builder.field("null_value",nullValue);
  }
  if (fieldType.indexed() != Defaults.FIELD_TYPE.indexed()) {
    builder.field("index",fieldType.indexed());
  }
  if (fieldType.stored() != Defaults.FIELD_TYPE.stored()) {
    builder.field("store",fieldType.stored());
  }
  builder.endObject();
  return builder;
}
