{
  Directory[] dirs=new Directory[locations.length];
  try {
    for (int i=0; i < locations.length; i++) {
      dirs[i]=new SimpleFSDirectory(locations[i]);
    }
    return readChecksums(dirs,null);
  }
  finally {
    for (    Directory dir : dirs) {
      if (dir != null) {
        try {
          dir.close();
        }
 catch (        IOException e) {
        }
      }
    }
  }
}
