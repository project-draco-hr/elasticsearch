{
  TransportAddress server1Address=((InternalNode)node("server1")).injector().getInstance(TransportService.class).boundAddress().publishAddress();
  TransportClient client=new TransportClient(settingsBuilder().put("cluster.name","test-cluster-" + NetworkUtils.getLocalAddress().getHostName()).put("discovery.enabled",false).build());
  client.addTransportAddress(server1Address);
  return client;
}
