{
  if (root != null && root.exists()) {
    if (root.isDirectory()) {
      File[] children=root.listFiles();
      if (children != null) {
        for (        File aChildren : children) {
          deleteRecursively(aChildren);
        }
      }
    }
    if (deleteRoot) {
      return root.delete();
    }
 else {
      return true;
    }
  }
  return false;
}
