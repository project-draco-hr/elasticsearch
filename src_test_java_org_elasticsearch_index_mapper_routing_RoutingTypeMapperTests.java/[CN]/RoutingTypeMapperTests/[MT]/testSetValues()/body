{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").startObject("_routing").field("store","no").field("index","no").endObject().endObject().endObject().string();
  DocumentMapper docMapper=createIndex("test").mapperService().documentMapperParser().parse(mapping);
  assertThat(docMapper.routingFieldMapper().fieldType().stored(),equalTo(false));
  assertEquals(IndexOptions.NONE,docMapper.routingFieldMapper().fieldType().indexOptions());
}
