{
  Client client=client();
  try {
    PutRepositoryResponse putRepositoryResponse=client.admin().cluster().preparePutRepository("test-repo").setType("hdfs").setSettings(Settings.settingsBuilder().put("uri","file:///").put("conf.fs.AbstractFileSystem.hdfs.impl",TestingFs.class.getName()).put("path","should-fail").put("chunk_size",randomIntBetween(100,1000) + "k").put("compress",randomBoolean())).get();
    assertThat(putRepositoryResponse.isAcknowledged(),equalTo(true));
    createIndex("test-idx-1","test-idx-2","test-idx-3");
    ensureGreen();
    fail("Path name is invalid");
  }
 catch (  RepositoryException re) {
  }
}
