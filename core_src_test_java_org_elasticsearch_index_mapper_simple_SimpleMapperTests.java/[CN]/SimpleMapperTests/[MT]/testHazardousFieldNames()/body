{
  IndexService indexService=createIndex("test");
  DocumentMapperParser mapperParser=indexService.mapperService().documentMapperParser();
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").startObject("properties").startObject("foo.bar").field("type","string").endObject().endObject().endObject().string();
  try {
    mapperParser.parse(mapping);
    fail("Mapping parse should have failed");
  }
 catch (  MapperParsingException e) {
    assertTrue(e.getMessage(),e.getMessage().contains("cannot contain '.'"));
  }
}
