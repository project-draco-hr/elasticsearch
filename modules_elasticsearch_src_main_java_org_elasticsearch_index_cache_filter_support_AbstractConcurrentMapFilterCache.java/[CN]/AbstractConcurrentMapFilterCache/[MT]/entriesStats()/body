{
  long sizeInBytes=0;
  long totalCount=0;
  int segmentsCount=0;
  for (  ReaderValue readerValue : cache.values()) {
    segmentsCount++;
    for (    DocSet docSet : readerValue.filters().values()) {
      sizeInBytes+=docSet.sizeInBytes();
      totalCount++;
    }
  }
  return new EntriesStats(sizeInBytes,segmentsCount == 0 ? 0 : totalCount / segmentsCount);
}
