{
  MockController controller=new MockController(Settings.builder().put(IndexingMemoryController.INDEX_BUFFER_SIZE_SETTING,"50%").put(IndexingMemoryController.TRANSLOG_BUFFER_SIZE_SETTING,"0.5%").build());
  assertThat(controller.indexingBufferSize(),equalTo(new ByteSizeValue(50,ByteSizeUnit.MB)));
  assertThat(controller.translogBufferSize(),equalTo(new ByteSizeValue(512,ByteSizeUnit.KB)));
}
