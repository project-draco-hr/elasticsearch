{
  MockController controller=new MockController(Settings.builder().put(IndexingMemoryController.INDEX_BUFFER_SIZE_SETTING,"10mb").put(IndexingMemoryController.MIN_SHARD_INDEX_BUFFER_SIZE_SETTING,"6mb").put(IndexingMemoryController.MIN_SHARD_TRANSLOG_BUFFER_SIZE_SETTING,"40kb").build());
  assertTwoActiveShards(controller,new ByteSizeValue(6,ByteSizeUnit.MB),new ByteSizeValue(40,ByteSizeUnit.KB));
}
