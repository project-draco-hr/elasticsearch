{
  StringBuilder sb=new StringBuilder();
  sb.append(major).append('.').append(minor).append('.').append(revision);
  if (isBeta()) {
    if (major >= 2) {
      sb.append(".beta");
    }
 else {
      sb.append(".Beta");
    }
    sb.append(build);
  }
 else   if (build < 99) {
    sb.append(".RC").append(build - 50);
  }
  return sb.toString();
}
