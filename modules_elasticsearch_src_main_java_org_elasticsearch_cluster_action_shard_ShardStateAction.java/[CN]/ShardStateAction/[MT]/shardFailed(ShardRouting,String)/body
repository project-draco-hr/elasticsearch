{
  logger.warn("Sending failed shard for {}, reason [{}]",shardRouting,reason);
  Nodes nodes=clusterService.state().nodes();
  if (nodes.localNodeMaster()) {
    threadPool.execute(new Runnable(){
      @Override public void run(){
        innerShardFailed(shardRouting,reason);
      }
    }
);
  }
 else {
    transportService.sendRequest(clusterService.state().nodes().masterNode(),ShardFailedTransportHandler.ACTION,new ShardRoutingEntry(shardRouting,reason),VoidTransportResponseHandler.INSTANCE);
  }
}
