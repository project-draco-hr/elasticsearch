{
  logger.warn("Sending failed shard for {}",shardRouting);
  Nodes nodes=clusterService.state().nodes();
  if (nodes.localNodeMaster()) {
    threadPool.execute(new Runnable(){
      @Override public void run(){
        innerShardFailed(shardRouting);
      }
    }
);
  }
 else {
    transportService.sendRequest(clusterService.state().nodes().masterNode(),ShardFailedTransportHandler.ACTION,shardRouting,VoidTransportResponseHandler.INSTANCE);
  }
}
