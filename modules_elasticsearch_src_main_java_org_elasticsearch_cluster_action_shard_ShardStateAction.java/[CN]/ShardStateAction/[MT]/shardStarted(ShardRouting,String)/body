{
  if (logger.isDebugEnabled()) {
    logger.debug("Sending shard started for {}, reason [{}]",shardRouting,reason);
  }
  Nodes nodes=clusterService.state().nodes();
  if (nodes.localNodeMaster()) {
    threadPool.execute(new Runnable(){
      @Override public void run(){
        innerShardStarted(shardRouting,reason);
      }
    }
);
  }
 else {
    transportService.sendRequest(clusterService.state().nodes().masterNode(),ShardStartedTransportHandler.ACTION,new ShardRoutingEntry(shardRouting,reason),VoidTransportResponseHandler.INSTANCE);
  }
}
