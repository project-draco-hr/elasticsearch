{
  int defaultMaxWindow=IndexSettings.MAX_RESCORE_WINDOW_SETTING.get(Settings.EMPTY);
  createIndex("idx");
  assertAcked(client().admin().indices().prepareUpdateSettings("idx").setSettings(Settings.builder().put(IndexSettings.MAX_RESULT_WINDOW_SETTING.getKey(),defaultMaxWindow * 2)).get());
  indexRandom(true,client().prepareIndex("idx","type").setSource("{}"));
  assertHitCount(client().prepareSearch("idx").addRescorer(new QueryRescorerBuilder(matchAllQuery()).windowSize(defaultMaxWindow)).get(),1);
}
