{
  if (request.listenerThreaded() && !alreadyThreaded) {
    threadPool.execute(new Runnable(){
      @Override public void run(){
        try {
          listener.onResponse(newResponse(request,shardsResponses,clusterState));
        }
 catch (        Exception e) {
          listener.onFailure(e);
        }
      }
    }
);
  }
 else {
    try {
      listener.onResponse(newResponse(request,shardsResponses,clusterState));
    }
 catch (    Exception e) {
      listener.onFailure(e);
    }
  }
}
