{
  long deadline=startTime + tickDuration * tick;
  for (; ; ) {
    final long currentTime=System.currentTimeMillis();
    final long sleepTime=tickDuration * tick - (currentTime - startTime);
    if (sleepTime <= 0) {
      break;
    }
    try {
      Thread.sleep(sleepTime);
    }
 catch (    InterruptedException e) {
      if (shutdown.get()) {
        return -1;
      }
    }
  }
  tick++;
  return deadline;
}
