{
  Builder builder=Settings.settingsBuilder().put("index.analysis.filter.my_stop.type","stop").put("index.analysis.filter.my_stop.enable_position_increments",false);
  if (random().nextBoolean()) {
    builder.put("index.analysis.filter.my_stop.version","5.0");
  }
  builder.put("path.home",createTempDir().toString());
  Settings settings=builder.build();
  AnalysisService analysisService=AnalysisTestsHelper.createAnalysisServiceFromSettings(settings);
  analysisService.tokenFilter("my_stop");
}
