{
  super.writeTo(out);
  if (indices == null) {
    out.writeVInt(0);
  }
 else {
    out.writeVInt(indices.length);
    for (    String index : indices) {
      out.writeUTF(index);
    }
  }
  timeout.writeTo(out);
  if (waitForStatus == null) {
    out.writeBoolean(false);
  }
 else {
    out.writeBoolean(true);
    out.writeByte(waitForStatus.value());
  }
  out.writeInt(waitForRelocatingShards);
}
