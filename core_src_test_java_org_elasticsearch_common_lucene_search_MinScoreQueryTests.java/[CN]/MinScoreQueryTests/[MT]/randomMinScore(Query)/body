{
  TopDocs topDocs=s.search(query,2);
  float base=0;
switch (topDocs.totalHits) {
case 0:
    break;
case 1:
  base=topDocs.scoreDocs[0].score;
break;
default :
base=(topDocs.scoreDocs[0].score + topDocs.scoreDocs[1].score) / 2;
break;
}
float delta=random().nextFloat() - 0.5f;
return base + delta;
}
