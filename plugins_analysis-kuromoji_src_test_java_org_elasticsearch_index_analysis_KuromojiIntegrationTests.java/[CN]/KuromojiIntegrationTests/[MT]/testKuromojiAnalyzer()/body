{
  AnalyzeResponse response=client().admin().indices().prepareAnalyze("JR??????????????????????????????????????????????????????").setAnalyzer("kuromoji").execute().get();
  String[] expectedTokens={"jr","??????","???","??????","?????????","??????","??????"};
  assertThat(response,notNullValue());
  assertThat(response.getTokens().size(),is(7));
  for (int i=0; i < expectedTokens.length; i++) {
    assertThat(response.getTokens().get(i).getTerm(),is(expectedTokens[i]));
  }
}
