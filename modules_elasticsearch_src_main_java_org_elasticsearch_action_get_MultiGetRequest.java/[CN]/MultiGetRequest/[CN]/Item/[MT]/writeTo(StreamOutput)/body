{
  out.writeUTF(index);
  if (type == null) {
    out.writeBoolean(false);
  }
 else {
    out.writeBoolean(true);
    out.writeUTF(type);
  }
  out.writeUTF(id);
  if (routing == null) {
    out.writeBoolean(false);
  }
 else {
    out.writeBoolean(true);
    out.writeUTF(routing);
  }
  if (fields == null) {
    out.writeVInt(0);
  }
 else {
    out.writeVInt(fields.length);
    for (    String field : fields) {
      out.writeUTF(field);
    }
  }
}
