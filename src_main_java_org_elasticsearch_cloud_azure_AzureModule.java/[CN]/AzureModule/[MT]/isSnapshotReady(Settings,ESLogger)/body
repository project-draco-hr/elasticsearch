{
  if (!isCloudReady(settings)) {
    logger.trace("cloud settings are disabled");
    return false;
  }
  if (isPropertyMissing(settings,"cloud.azure." + AzureStorageService.Fields.ACCOUNT,null) || isPropertyMissing(settings,"cloud.azure." + AzureStorageService.Fields.KEY,null)) {
    logger.trace("azure repository is not set using {} and {} properties",AzureStorageService.Fields.ACCOUNT,AzureStorageService.Fields.KEY);
    return false;
  }
  logger.trace("all required properties for azure repository are set!");
  return true;
}
