{
  String corsValue="http://localhost:9200";
  try (RestClient restClient=restClient()){
    try (ElasticsearchResponse response=restClient.performRequest("GET","/",Collections.emptyMap(),null,new BasicHeader("User-Agent","Mozilla Bar"),new BasicHeader("Origin",corsValue))){
      assertThat(response.getStatusLine().getStatusCode(),is(200));
      assertThat(response.getFirstHeader("Access-Control-Allow-Origin"),nullValue());
      assertThat(response.getFirstHeader("Access-Control-Allow-Credentials"),nullValue());
    }
   }
 }
