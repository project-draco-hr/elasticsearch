{
  try {
    while (running.get()) {
      try {
        List<IndexShard> shardsToPurge=getShardsToPurge();
        purgeShards(shardsToPurge);
      }
 catch (      Throwable e) {
        if (running.get()) {
          logger.warn("failed to execute ttl purge",e);
        }
      }
      if (running.get()) {
        notifier.await();
      }
    }
  }
  finally {
    shutdownLatch.countDown();
  }
}
