{
  while (reader.peek() == ' ') {
    reader.forward();
  }
  if (reader.peek() == '#') {
    while (Constant.NULL_OR_LINEBR.hasNo(reader.peek())) {
      reader.forward();
    }
  }
  char ch=reader.peek();
  if (Constant.NULL_OR_LINEBR.hasNo(ch)) {
    throw new ScannerException("while scanning a block scalar",startMark,"expected a comment or a line break, but found " + ch,reader.getMark());
  }
  return scanLineBreak();
}
