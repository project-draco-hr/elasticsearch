{
  XContentBuilder expected=newXContentBuilder(true).startObject().startArray("authors").startObject().field("name","John Doe").field("lastname","John").field("firstname","Doe").endObject().startObject().field("name","William Smith").field("lastname","William").field("firstname","Smith").endObject().endArray().endObject();
  assertXContentBuilder(expected,sample(true,"authors"));
  assertXContentBuilder(expected,sample(true,"authors.*"));
  assertXContentBuilder(expected,sample(true,"authors.*name"));
}
