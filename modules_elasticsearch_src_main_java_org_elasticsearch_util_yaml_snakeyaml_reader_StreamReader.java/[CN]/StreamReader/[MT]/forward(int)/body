{
  if (this.pointer + length + 1 >= this.buffer.length()) {
    update(length + 1);
  }
  char ch=0;
  for (int i=0; i < length; i++) {
    ch=this.buffer.charAt(this.pointer);
    this.pointer++;
    this.index++;
    if (Constant.LINEBR.has(ch) || (ch == '\r' && buffer.charAt(pointer) != '\n')) {
      this.line++;
      this.column=0;
    }
 else     if (ch != '\uFEFF') {
      this.column++;
    }
  }
}
