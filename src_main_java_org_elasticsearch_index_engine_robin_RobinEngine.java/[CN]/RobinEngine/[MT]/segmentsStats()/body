{
  rwl.readLock().lock();
  try {
    ensureOpen();
    Searcher searcher=acquireSearcher("segments_stats");
    try {
      SegmentsStats stats=new SegmentsStats();
      stats.add(searcher.reader().leaves().size());
      return stats;
    }
  finally {
      searcher.release();
    }
  }
  finally {
    rwl.readLock().unlock();
  }
}
