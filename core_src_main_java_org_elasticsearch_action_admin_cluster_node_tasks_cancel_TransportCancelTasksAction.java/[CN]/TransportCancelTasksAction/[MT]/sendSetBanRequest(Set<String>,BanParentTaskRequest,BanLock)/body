{
  ClusterState clusterState=clusterService.state();
  for (  String node : nodes) {
    DiscoveryNode discoveryNode=clusterState.getNodes().get(node);
    if (discoveryNode != null) {
      logger.debug("Sending ban for tasks with the parent [{}:{}] to the node [{}], ban [{}]",request.parentNodeId,request.parentTaskId,node,request.ban);
      transportService.sendRequest(discoveryNode,BAN_PARENT_ACTION_NAME,request,new EmptyTransportResponseHandler(ThreadPool.Names.SAME){
        @Override public void handleResponse(        TransportResponse.Empty response){
          banLock.onBanSet();
        }
        @Override public void handleException(        TransportException exp){
          banLock.onBanSet();
        }
      }
);
    }
 else {
      banLock.onBanSet();
      logger.debug("Cannot send ban for tasks with the parent [{}:{}] to the node [{}] - the node no longer in the cluster",request.parentNodeId,request.parentTaskId,node);
    }
  }
}
