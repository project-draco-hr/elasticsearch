{
  ClusterState clusterState=clusterService.state();
  for (  String node : nodes) {
    DiscoveryNode discoveryNode=clusterState.getNodes().get(node);
    if (discoveryNode != null) {
      logger.debug("Sending remove ban for tasks with the parent [{}:{}] to the node [{}]",request.parentNodeId,request.parentTaskId,node);
      transportService.sendRequest(discoveryNode,BAN_PARENT_ACTION_NAME,request,EmptyTransportResponseHandler.INSTANCE_SAME);
    }
 else {
      logger.debug("Cannot send remove ban request for tasks with the parent [{}:{}] to the node [{}] - the node no longer in " + "the cluster",request.parentNodeId,request.parentTaskId,node);
    }
  }
}
