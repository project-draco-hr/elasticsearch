{
  Map<String,Object> params=new HashMap<>();
  params.put("dec",1);
  final double[] pcts=randomPercentiles();
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(randomCompression(percentiles("percentiles")).script(new Script("doc['value'].value - dec",ScriptType.INLINE,null,params)).percentiles(pcts)).execute().actionGet();
  assertHitCount(searchResponse,10);
  final Percentiles percentiles=searchResponse.getAggregations().get("percentiles");
  assertConsistent(pcts,percentiles,minValue - 1,maxValue - 1);
}
