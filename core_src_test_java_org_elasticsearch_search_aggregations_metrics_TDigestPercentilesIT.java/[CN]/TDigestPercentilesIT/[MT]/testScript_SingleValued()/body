{
  final double[] pcts=randomPercentiles();
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(randomCompression(percentiles("percentiles")).script(new Script("doc['value'].value")).percentiles(pcts)).execute().actionGet();
  assertHitCount(searchResponse,10);
  final Percentiles percentiles=searchResponse.getAggregations().get("percentiles");
  assertConsistent(pcts,percentiles,minValue,maxValue);
}
