{
  Path genericConfigFolder=newTempDirPath();
  Settings settings=settingsBuilder().put("path.conf",genericConfigFolder).build();
  Environment environment=new Environment(settings);
  resourceWatcherService=new ResourceWatcherService(settings,null);
  logger.info("--> setup script service");
  scriptService=new ScriptService(settings,environment,ImmutableSet.of(new TestEngineService(),new GroovyScriptEngineService(settings),new ExpressionScriptEngineService(settings)),resourceWatcherService,new NodeSettingsService(settings));
  scriptsFilePath=genericConfigFolder.resolve("scripts");
  Files.createDirectories(scriptsFilePath);
}
