{
  if (e.getCause() instanceof ReadTimeoutException) {
    if (logger.isTraceEnabled()) {
      logger.trace("Connection timeout [{}]",ctx.getChannel().getRemoteAddress());
    }
    ctx.getChannel().close();
  }
 else {
    if (!lifecycle.started()) {
      return;
    }
    if (!NetworkExceptionHelper.isCloseConnectionException(e.getCause())) {
      logger.warn(new ParameterizedMessage("Caught exception while handling client http traffic, closing connection {}",ctx.getChannel()),e.getCause());
      ctx.getChannel().close();
    }
 else {
      logger.debug(new ParameterizedMessage("Caught exception while handling client http traffic, closing connection {}",ctx.getChannel()),e.getCause());
      ctx.getChannel().close();
    }
  }
}
