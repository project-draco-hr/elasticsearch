{
  if (stats == null || stats.docCount == 0) {
    out.writeVLong(0);
  }
 else {
    out.writeVLong(stats.docCount);
    stats.writeTo(out);
  }
  if (results == null || results.getDocCount() == 0) {
    out.writeVLong(0);
  }
 else {
    out.writeVLong(results.getDocCount());
    results.writeTo(out);
  }
}
