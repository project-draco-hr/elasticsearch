{
  final int size=scaledRandomIntBetween(5,1 << 22);
  for (  String type : Arrays.asList("Byte","Int","Long","Float","Double","Object")) {
    HierarchyCircuitBreakerService hcbs=new HierarchyCircuitBreakerService(Settings.builder().put(HierarchyCircuitBreakerService.REQUEST_CIRCUIT_BREAKER_LIMIT_SETTING.getKey(),size - 1,ByteSizeUnit.BYTES).build(),new ClusterSettingsService(Settings.EMPTY,new ClusterSettings(ClusterSettings.BUILT_IN_CLUSTER_SETTINGS)));
    BigArrays bigArrays=new BigArrays(null,hcbs).withCircuitBreaking();
    Method create=BigArrays.class.getMethod("new" + type + "Array",long.class);
    try {
      create.invoke(bigArrays,size);
      fail("expected an exception on " + create);
    }
 catch (    InvocationTargetException e) {
      assertTrue(e.getCause() instanceof CircuitBreakingException);
    }
    assertEquals(0,hcbs.getBreaker(CircuitBreaker.REQUEST).getUsed());
  }
}
