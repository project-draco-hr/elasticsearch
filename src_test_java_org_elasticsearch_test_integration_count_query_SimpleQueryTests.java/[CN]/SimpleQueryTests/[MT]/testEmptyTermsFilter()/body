{
  assertAcked(prepareCreate("test").addMapping("type",jsonBuilder().startObject().startObject("type").startObject("properties").startObject("terms").field("type","string").endObject().endObject().endObject().endObject()));
  ensureGreen();
  client().prepareIndex("test","type","1").setSource("term","1").execute().actionGet();
  client().prepareIndex("test","type","2").setSource("term","2").execute().actionGet();
  client().prepareIndex("test","type","3").setSource("term","3").execute().actionGet();
  client().prepareIndex("test","type","4").setSource("term","4").execute().actionGet();
  refresh();
  CountResponse countResponse=client().prepareCount("test").setQuery(filteredQuery(matchAllQuery(),termsFilter("term",new String[0]))).execute().actionGet();
  assertNoFailures(countResponse);
  assertHitCount(countResponse,0l);
  countResponse=client().prepareCount("test").setQuery(filteredQuery(matchAllQuery(),idsFilter())).execute().actionGet();
  assertNoFailures(countResponse);
  assertHitCount(countResponse,0l);
}
