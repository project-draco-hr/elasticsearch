{
  assertAcked(client().admin().indices().prepareCreate("test").addMapping("test","name","type=string,term_vector=with_positions_offsets,store=" + (randomBoolean() ? "yes" : "no")).setSettings(ImmutableSettings.settingsBuilder().put("index.number_of_shards",between(1,5))));
  ensureYellow();
  StringBuilder builder=new StringBuilder();
  for (int i=0; i < 6000; i++) {
    builder.append("abc").append(" ");
  }
  client().prepareIndex("test","test","1").setSource("name",builder.toString()).get();
  refresh();
  SearchResponse search=client().prepareSearch().setQuery(constantScoreQuery(matchQuery("name","abc"))).addHighlightedField("name").get();
  assertHighlight(search,0,"name",0,startsWith("<em>abc</em> <em>abc</em> <em>abc</em> <em>abc</em>"));
}
