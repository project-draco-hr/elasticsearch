{
  assertThat(awaitBusy(new Predicate<Object>(){
    @Override public boolean apply(    Object o){
      try {
        RefreshResponse actionGet=client().admin().indices().prepareRefresh().execute().actionGet();
        assertNoFailures(actionGet);
