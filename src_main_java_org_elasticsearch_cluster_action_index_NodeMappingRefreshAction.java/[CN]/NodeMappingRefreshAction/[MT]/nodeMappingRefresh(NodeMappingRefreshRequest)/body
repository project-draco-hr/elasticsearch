{
  DiscoveryNodes nodes=clusterService.state().nodes();
  if (nodes.localNodeMaster()) {
    innerMappingRefresh(request);
  }
 else {
    transportService.sendRequest(clusterService.state().nodes().masterNode(),NodeMappingRefreshTransportHandler.ACTION,request,EmptyTransportResponseHandler.INSTANCE_SAME);
  }
}
