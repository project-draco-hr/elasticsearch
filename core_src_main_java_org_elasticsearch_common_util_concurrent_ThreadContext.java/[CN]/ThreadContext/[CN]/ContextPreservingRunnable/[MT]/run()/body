{
  boolean whileRunning=false;
  try (ThreadContext.StoredContext ingore=stashContext()){
    ctx.restore();
    whileRunning=true;
    in.run();
    whileRunning=false;
  }
 catch (  IllegalStateException ex) {
    if (whileRunning || threadLocal.closed.get() == false) {
      throw ex;
    }
  }
}
