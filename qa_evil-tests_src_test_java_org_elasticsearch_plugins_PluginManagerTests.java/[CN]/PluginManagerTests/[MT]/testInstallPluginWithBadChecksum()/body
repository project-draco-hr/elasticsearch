{
  String pluginName="fake-plugin";
  Path pluginDir=createTempDir().resolve(pluginName);
  String pluginUrl=createPluginWithBadChecksum(pluginDir,"description","fake desc","name",pluginName,"version","1.0","elasticsearch.version",Version.CURRENT.toString(),"java.version",System.getProperty("java.specification.version"),"classname","FakePlugin");
  assertStatus(String.format(Locale.ROOT,"install %s --verbose",pluginUrl),ExitStatus.IO_ERROR);
  assertThatPluginIsNotListed(pluginName);
  assertFileNotExists(environment.pluginsFile().resolve(pluginName));
}
