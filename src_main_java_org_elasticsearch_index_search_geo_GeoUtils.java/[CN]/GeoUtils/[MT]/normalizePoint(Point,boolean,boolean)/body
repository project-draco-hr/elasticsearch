{
  if (normLat) {
    point.lat=centeredModulus(point.lat,360);
    boolean shift=true;
    if (point.lat < -90) {
      point.lat=-180 - point.lat;
    }
 else     if (point.lat > 90) {
      point.lat=180 - point.lat;
    }
 else {
      shift=false;
    }
    if (shift) {
      if (normLon) {
        point.lon+=180;
      }
 else {
        point.lon+=normalizeLon(point.lon) > 0 ? -180 : 180;
      }
    }
  }
  if (normLon) {
    point.lon=centeredModulus(point.lon,360);
  }
}
