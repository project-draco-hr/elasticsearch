{
  Map<String,Object> params=new HashMap<>();
  params.put("s","values");
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(count("count").script(new Script("doc[s].values",ScriptType.INLINE,null,params))).execute().actionGet();
  assertThat(searchResponse.getHits().getTotalHits(),equalTo(10l));
  ValueCount valueCount=searchResponse.getAggregations().get("count");
  assertThat(valueCount,notNullValue());
  assertThat(valueCount.getName(),equalTo("count"));
  assertThat(valueCount.getValue(),equalTo(20l));
}
