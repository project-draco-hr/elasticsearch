{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").startObject("properties").startObject("point").field("type","geo_point").endObject().endObject().endObject().endObject().string();
  Version version=VersionUtils.randomVersionBetween(random(),Version.V_1_0_0,Version.CURRENT);
  Settings settings=Settings.settingsBuilder().put(IndexMetaData.SETTING_VERSION_CREATED,version).build();
  DocumentMapper defaultMapper=createIndex("test",settings).mapperService().documentMapperParser().parse("type",new CompressedXContent(mapping));
  ParsedDocument doc=defaultMapper.parse("test","type","1",XContentFactory.jsonBuilder().startObject().field("point",(Object)null).endObject().bytes());
  assertThat(doc.rootDoc().get("point"),nullValue());
}
