{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").startObject("properties").startObject("point").field("type","geo_point").field("lat_lon",false).endObject().endObject().endObject().endObject().string();
  Version version=VersionUtils.randomVersionBetween(random(),Version.V_1_0_0,Version.CURRENT);
  Settings settings=Settings.settingsBuilder().put(IndexMetaData.SETTING_VERSION_CREATED,version).build();
  DocumentMapper defaultMapper=createIndex("test",settings).mapperService().documentMapperParser().parse("type",new CompressedXContent(mapping));
  ParsedDocument doc=defaultMapper.parse("test","type","1",XContentFactory.jsonBuilder().startObject().field("point","1.2,1.3").endObject().bytes());
  assertThat(doc.rootDoc().getField("point.lat"),nullValue());
  assertThat(doc.rootDoc().getField("point.lon"),nullValue());
  if (version.before(Version.V_2_2_0)) {
    assertThat(doc.rootDoc().get("point"),equalTo("1.2,1.3"));
  }
 else {
    assertThat(Long.parseLong(doc.rootDoc().get("point")),equalTo(GeoUtils.mortonHash(1.3,1.2)));
  }
}
