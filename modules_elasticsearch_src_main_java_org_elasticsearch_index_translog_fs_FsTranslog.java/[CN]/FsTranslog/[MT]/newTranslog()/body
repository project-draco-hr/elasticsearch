{
synchronized (mutex) {
    operationCounter.set(0);
    lastPosition.set(0);
    lastWrittenPosition.set(0);
    this.id=id + 1;
    if (raf != null) {
      raf.decreaseRefCount(true);
    }
    try {
      raf=new RafReference(new File(location,"translog-" + id));
      raf.raf().setLength(0);
    }
 catch (    IOException e) {
      raf=null;
      throw new TranslogException(shardId,"translog not found",e);
    }
  }
}
