{
  prepareCreate("test").addMapping("type1",XContentFactory.jsonBuilder().startObject().startObject("type1").startObject("properties").startObject("pin").field("type","geo_point").startObject("fielddata").field("format","compressed").field("precision","2mm").endObject().endObject().endObject().endObject().endObject()).execute().actionGet();
  assertPrecision(new Distance(2,DistanceUnit.MILLIMETERS));
  client().admin().indices().preparePutMapping("test").setType("type1").setSource(XContentFactory.jsonBuilder().startObject().startObject("type1").startObject("properties").startObject("pin").field("type","geo_point").startObject("fielddata").field("format","compressed").field("precision","11m").endObject().endObject().endObject().endObject().endObject()).execute().actionGet();
  assertPrecision(new Distance(11,DistanceUnit.METERS));
}
