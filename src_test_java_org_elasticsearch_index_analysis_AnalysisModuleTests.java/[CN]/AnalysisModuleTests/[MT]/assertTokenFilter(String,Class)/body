{
  Settings settings=ImmutableSettings.settingsBuilder().put(IndexMetaData.SETTING_VERSION_CREATED,Version.CURRENT).put("path.home",createTempDir().toString()).build();
  AnalysisService analysisService=AnalysisTestsHelper.createAnalysisServiceFromSettings(settings);
  TokenFilterFactory tokenFilter=analysisService.tokenFilter(name);
  Tokenizer tokenizer=new WhitespaceTokenizer();
  tokenizer.setReader(new StringReader("foo bar"));
  TokenStream stream=tokenFilter.create(tokenizer);
  assertThat(stream,instanceOf(clazz));
}
