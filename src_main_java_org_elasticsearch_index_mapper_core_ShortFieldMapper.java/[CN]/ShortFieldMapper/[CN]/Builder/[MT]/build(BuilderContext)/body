{
  fieldType.setOmitNorms(fieldType.omitNorms() && boost == 1.0f);
  ShortFieldMapper fieldMapper=new ShortFieldMapper(buildNames(context),precisionStep,boost,fieldType,nullValue,ignoreMalformed(context),postingsProvider,docValuesProvider,similarity,fieldDataSettings,context.indexSettings());
  fieldMapper.includeInAll(includeInAll);
  return fieldMapper;
}
