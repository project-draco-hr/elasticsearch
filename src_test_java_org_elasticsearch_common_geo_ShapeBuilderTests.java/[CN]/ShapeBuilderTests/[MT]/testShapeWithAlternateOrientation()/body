{
  PolygonBuilder builder=ShapeBuilder.newPolygon().point(180,0).point(176,4).point(-176,4).point(180,0);
  Shape shape=builder.close().build();
  assertPolygon(shape);
  builder=ShapeBuilder.newPolygon().point(180,0).point(-176,4).point(176,4).point(180,0);
  shape=builder.close().build();
  assertMultiPolygon(shape);
}
