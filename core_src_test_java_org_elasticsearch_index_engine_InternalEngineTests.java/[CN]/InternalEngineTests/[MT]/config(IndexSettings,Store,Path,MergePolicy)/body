{
  IndexWriterConfig iwc=newIndexWriterConfig();
  TranslogConfig translogConfig=new TranslogConfig(shardId,translogPath,indexSettings,BigArrays.NON_RECYCLING_INSTANCE);
  EngineConfig config=new EngineConfig(shardId,threadPool,indexSettings,null,store,createSnapshotDeletionPolicy(),mergePolicy,iwc.getAnalyzer(),iwc.getSimilarity(),new CodecService(null,logger),new Engine.EventListener(){
    @Override public void onFailedEngine(    String reason,    @Nullable Throwable t){
    }
  }
,new TranslogHandler(shardId.index().getName(),logger),IndexSearcher.getDefaultQueryCache(),IndexSearcher.getDefaultQueryCachingPolicy(),translogConfig,TimeValue.timeValueMinutes(5));
  try {
    config.setCreate(Lucene.indexExists(store.directory()) == false);
  }
 catch (  IOException e) {
    throw new ElasticsearchException("can't find index?",e);
  }
  return config;
}
