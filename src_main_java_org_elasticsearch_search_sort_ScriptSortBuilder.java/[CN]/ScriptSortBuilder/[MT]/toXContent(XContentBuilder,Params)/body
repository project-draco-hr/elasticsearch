{
  builder.startObject("_script");
  builder.field("script",script);
  builder.field("type",type);
  if (order == SortOrder.DESC) {
    builder.field("reverse",true);
  }
  if (lang != null) {
    builder.field("lang",lang);
  }
  if (this.params != null) {
    builder.field("params",this.params);
  }
  builder.endObject();
  return builder;
}
