{
  try {
    client().prepareSearch("idx").setTypes("type").addAggregation(histogram("histo").field(INTERVAL_FIELD).interval(interval).minDocCount(0).extendedBounds(0L,(long)(interval * (numBuckets - 1))).subAggregation(randomMetric("the_metric",VALUE_FIELD)).subAggregation(movingAvg("movavg_counts").window(windowSize).modelBuilder(randomModelBuilder()).gapPolicy(gapPolicy).predict(0).setBucketsPaths("the_metric"))).execute().actionGet();
