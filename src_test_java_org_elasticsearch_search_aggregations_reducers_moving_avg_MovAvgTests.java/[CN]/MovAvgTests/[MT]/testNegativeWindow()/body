{
  try {
    client().prepareSearch("idx").setTypes("type").addAggregation(histogram("histo").field(INTERVAL_FIELD).interval(interval).extendedBounds(0L,(long)(interval * (numBuckets - 1))).subAggregation(randomMetric("the_metric",VALUE_FIELD)).subAggregation(movingAvg("movavg_counts").window(-10).modelBuilder(new SimpleModel.SimpleModelBuilder()).gapPolicy(gapPolicy).setBucketsPaths("_count"))).execute().actionGet();
