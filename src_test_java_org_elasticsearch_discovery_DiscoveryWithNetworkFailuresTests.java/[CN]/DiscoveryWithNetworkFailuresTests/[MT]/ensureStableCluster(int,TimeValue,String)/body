{
  logger.debug("ensuring cluster is stable with [{}] nodes. access node: [{}]. timeout: [{}]",nodeCount,viaNode,timeValue);
  ClusterHealthResponse clusterHealthResponse=client(viaNode).admin().cluster().prepareHealth().setWaitForEvents(Priority.LANGUID).setWaitForNodes(Integer.toString(nodeCount)).setTimeout(timeValue).setWaitForRelocatingShards(0).get();
  assertThat(clusterHealthResponse.isTimedOut(),is(false));
}
