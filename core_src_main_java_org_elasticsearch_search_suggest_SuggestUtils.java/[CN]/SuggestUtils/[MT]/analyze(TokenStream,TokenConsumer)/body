{
  int numTokens=0;
  boolean success=false;
  try {
    stream.reset();
    consumer.reset(stream);
    while (stream.incrementToken()) {
      consumer.nextToken();
      numTokens++;
    }
    consumer.end();
  }
  finally {
    if (success) {
      stream.close();
    }
 else {
      IOUtils.closeWhileHandlingException(stream);
    }
  }
  return numTokens;
}
