{
  try {
    ParsedScrollId scrollId=parseScrollId(request.scrollId());
    AbstractAsyncAction action;
switch (scrollId.getType()) {
case QUERY_THEN_FETCH_TYPE:
      action=new SearchScrollQueryThenFetchAsyncAction(logger,clusterService,searchService,searchPhaseController,request,scrollId,listener);
    break;
case QUERY_AND_FETCH_TYPE:
  action=new SearchScrollQueryAndFetchAsyncAction(logger,clusterService,searchService,searchPhaseController,request,scrollId,listener);
break;
default :
throw new IllegalArgumentException("Scroll id type [" + scrollId.getType() + "] unrecognized");
}
action.start();
}
 catch (Throwable e) {
listener.onFailure(e);
}
}
