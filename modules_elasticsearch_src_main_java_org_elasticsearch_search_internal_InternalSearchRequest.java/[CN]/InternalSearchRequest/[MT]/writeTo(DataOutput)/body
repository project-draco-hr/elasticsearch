{
  out.writeUTF(index);
  out.writeInt(shardId);
  if (scroll == null) {
    out.writeBoolean(false);
  }
 else {
    out.writeBoolean(true);
    scroll.writeTo(out);
  }
  out.writeInt(from);
  out.writeInt(size);
  if (timeout == null) {
    out.writeBoolean(false);
  }
 else {
    out.writeBoolean(true);
    timeout.writeTo(out);
  }
  out.writeInt(source.length);
  out.write(source);
  out.writeFloat(queryBoost);
  out.writeInt(types.length);
  for (  String type : types) {
    out.writeUTF(type);
  }
}
