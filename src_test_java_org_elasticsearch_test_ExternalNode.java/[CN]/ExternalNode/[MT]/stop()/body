{
  if (running()) {
    try {
      if (nodeInfo != null && random.nextBoolean()) {
        getClient().admin().cluster().prepareNodesShutdown(this.nodeInfo.getNode().id()).setExit(random.nextBoolean()).setDelay("0s").get();
      }
      if (this.client != null) {
        client.close();
      }
    }
  finally {
      process.destroy();
      try {
        process.waitFor();
      }
 catch (      InterruptedException e) {
        Thread.interrupted();
      }
      process=null;
      nodeInfo=null;
    }
  }
}
