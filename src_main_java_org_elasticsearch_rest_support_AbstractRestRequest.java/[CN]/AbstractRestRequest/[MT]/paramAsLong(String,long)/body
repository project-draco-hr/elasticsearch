{
  String sValue=param(key);
  if (sValue == null) {
    return defaultValue;
  }
  try {
    return Long.parseLong(sValue);
  }
 catch (  NumberFormatException e) {
    throw new ElasticsearchIllegalArgumentException("Failed to parse int parameter [" + key + "] with value ["+ sValue+ "]",e);
  }
}
