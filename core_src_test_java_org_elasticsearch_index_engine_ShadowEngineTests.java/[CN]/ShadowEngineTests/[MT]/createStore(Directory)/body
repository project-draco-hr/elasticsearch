{
  IndexSettings indexSettings=IndexSettingsModule.newIndexSettings(shardId.index(),Settings.EMPTY,Collections.emptyList());
  final DirectoryService directoryService=new DirectoryService(shardId,indexSettings){
    @Override public Directory newDirectory() throws IOException {
      return directory;
    }
    @Override public long throttleTimeInNanos(){
      return 0;
    }
  }
;
  return new Store(shardId,indexSettings,directoryService,new DummyShardLock(shardId));
}
