{
  try {
    if (!tokenStream.hasAttribute(OffsetAttribute.class)) {
      return -1;
    }
    int end=-1;
    tokenStream.reset();
    while (tokenStream.incrementToken()) {
      OffsetAttribute attr=tokenStream.getAttribute(OffsetAttribute.class);
      if (attr.endOffset() >= noMatchSize) {
        if (attr.endOffset() == noMatchSize) {
          end=noMatchSize;
        }
        return end;
      }
      end=attr.endOffset();
    }
    return end;
  }
  finally {
    tokenStream.end();
    tokenStream.close();
  }
}
