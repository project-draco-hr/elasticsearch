{
  transportService.sendRequest(randomIngestNode(),action.name(),request,new TransportResponseHandler<TransportResponse>(){
    @Override public TransportResponse newInstance(){
      return action.newResponse();
    }
    @Override @SuppressWarnings("unchecked") public void handleResponse(    TransportResponse response){
      listener.onResponse(response);
    }
    @Override public void handleException(    TransportException exp){
      listener.onFailure(exp);
    }
    @Override public String executor(){
      return ThreadPool.Names.SAME;
    }
  }
);
}
