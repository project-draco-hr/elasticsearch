{
  if (active()) {
    return true;
  }
  if (unassignedInfo.getReason() == UnassignedInfo.Reason.INDEX_CREATED) {
    return false;
  }
  if (indexMetaData.activeAllocationIds(id()).isEmpty() && indexMetaData.getCreationVersion().onOrAfter(Version.V_5_0_0_alpha1)) {
    return false;
  }
  return true;
}
