{
  StringBuilder s=new StringBuilder();
  byte leftOver=(byte)(width - orig.length());
  if (leftOver > 0 && align == Align.LEFT) {
    s.append(orig);
    for (byte i=0; i < leftOver; i++) {
      s.append(" ");
    }
  }
 else   if (leftOver > 0 && align == Align.RIGHT) {
    for (byte i=0; i < leftOver; i++) {
      s.append(" ");
    }
    s.append(orig);
  }
 else {
    s.append(orig);
  }
  return s.toString();
}
