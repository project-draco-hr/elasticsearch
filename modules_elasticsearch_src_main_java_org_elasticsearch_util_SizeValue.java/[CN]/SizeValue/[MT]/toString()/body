{
  long bytes=bytes();
  double value=bytes;
  String suffix="b";
  if (bytes >= SizeUnit.C3) {
    value=gbFrac();
    suffix="g";
  }
 else   if (bytes >= SizeUnit.C2) {
    value=mbFrac();
    suffix="m";
  }
 else   if (bytes >= SizeUnit.C1) {
    value=kbFrac();
    suffix="k";
  }
  return Strings.format1Decimals(value,suffix);
}
