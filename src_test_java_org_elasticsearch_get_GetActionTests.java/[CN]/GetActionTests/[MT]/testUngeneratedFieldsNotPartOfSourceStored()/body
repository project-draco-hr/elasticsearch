{
  indexSingleDocumentWithUngeneratedFieldsThatAreNeverPartOf_source(true,randomBoolean());
  String[] fieldsList={"_timestamp","_size","_routing"};
  assertGetFieldsAlwaysWorks(indexOrAlias(),"doc","1",fieldsList,"1");
  refresh();
  assertGetFieldsAlwaysWorks(indexOrAlias(),"doc","1",fieldsList,"1");
  flush();
  assertGetFieldsAlwaysWorks(indexOrAlias(),"doc","1",fieldsList,"1");
}
