{
  String serverNodeId=SimpleNodesInfoTests.startNodeWithPlugins(settingsBuilder().put(PluginsService.PLUGINS_CHECK_LUCENE_KEY,true).put(PluginsService.ES_PLUGIN_PROPERTIES_FILE_KEY,"es-plugin-test.properties").put(PluginsService.LOAD_PLUGIN_FROM_CLASSPATH,true).build(),"/org/elasticsearch/plugins/lucene/");
  logger.info("--> server {} started" + serverNodeId);
  NodesInfoResponse response=client().admin().cluster().prepareNodesInfo().clear().setPlugins(true).execute().actionGet();
  logger.info("--> full json answer, status " + response.toString());
  ElasticsearchAssertions.assertNodeContainsPlugins(response,serverNodeId,Lists.newArrayList("current-lucene"),Lists.newArrayList("current"),Lists.newArrayList("2.0.0"),Collections.EMPTY_LIST,Collections.EMPTY_LIST,Collections.EMPTY_LIST);
}
