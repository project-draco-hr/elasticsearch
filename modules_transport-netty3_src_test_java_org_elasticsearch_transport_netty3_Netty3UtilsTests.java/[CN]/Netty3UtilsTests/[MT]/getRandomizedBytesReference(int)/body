{
  ReleasableBytesStreamOutput out=new ReleasableBytesStreamOutput(length,bigarrays);
  for (int i=0; i < length; i++) {
    out.writeByte((byte)random().nextInt(1 << 8));
  }
  assertEquals(out.size(),length);
  BytesReference ref=out.bytes();
  assertEquals(ref.length(),length);
  if (randomBoolean()) {
    return new BytesArray(ref.toBytesRef());
  }
 else   if (randomBoolean()) {
    BytesRef bytesRef=ref.toBytesRef();
    return Netty3Utils.toBytesReference(ChannelBuffers.wrappedBuffer(bytesRef.bytes,bytesRef.offset,bytesRef.length));
  }
 else {
    return ref;
  }
}
