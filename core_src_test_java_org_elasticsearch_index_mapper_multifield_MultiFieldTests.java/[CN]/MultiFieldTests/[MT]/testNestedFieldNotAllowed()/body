{
  String mapping=jsonBuilder().startObject().startObject("type").startObject("properties").startObject("my_field").field("type","string").startObject("fields").startObject("multi").field("type","nested").endObject().endObject().endObject().endObject().endObject().endObject().string();
  final DocumentMapperParser parser=createIndex("test").mapperService().documentMapperParser();
  try {
    parser.parse(mapping);
    fail("expected mapping parse failure");
  }
 catch (  MapperParsingException e) {
    assertTrue(e.getMessage().contains("cannot be used in multi field"));
  }
}
