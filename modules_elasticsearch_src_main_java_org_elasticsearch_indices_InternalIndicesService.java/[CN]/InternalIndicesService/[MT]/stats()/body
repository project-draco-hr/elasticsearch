{
  long totalSize=0;
  for (  IndexService indexService : indices.values()) {
    for (    IndexShard indexShard : indexService) {
      try {
        totalSize+=((InternalIndexShard)indexShard).store().estimateSize().bytes();
      }
 catch (      IOException e) {
      }
    }
  }
  return new IndicesStats(new ByteSizeValue(totalSize));
}
