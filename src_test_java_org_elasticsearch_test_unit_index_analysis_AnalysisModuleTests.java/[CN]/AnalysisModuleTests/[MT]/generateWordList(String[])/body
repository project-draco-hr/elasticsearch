{
  File wordListFile=File.createTempFile("wordlist",".txt");
  wordListFile.deleteOnExit();
  BufferedWriter writer=null;
  try {
    writer=new BufferedWriter(new FileWriter(wordListFile));
    for (    String word : words) {
      writer.write(word);
      writer.write('\n');
    }
  }
  finally {
    if (writer != null) {
      writer.close();
    }
  }
  return wordListFile;
}
