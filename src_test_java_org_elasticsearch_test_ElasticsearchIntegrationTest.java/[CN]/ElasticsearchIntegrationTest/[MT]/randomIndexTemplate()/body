{
  if (cluster().size() > 0) {
    ImmutableSettings.Builder builder=setRandomNormsLoading(setRandomMerge(getRandom(),ImmutableSettings.builder()).put(INDEX_SEED_SETTING,randomLong())).put(SETTING_NUMBER_OF_SHARDS,between(DEFAULT_MIN_NUM_SHARDS,DEFAULT_MAX_NUM_SHARDS)).put(SETTING_NUMBER_OF_REPLICAS,between(0,1));
    client().admin().indices().preparePutTemplate("random_index_template").setTemplate("*").setOrder(0).setSettings(builder).execute().actionGet();
  }
}
