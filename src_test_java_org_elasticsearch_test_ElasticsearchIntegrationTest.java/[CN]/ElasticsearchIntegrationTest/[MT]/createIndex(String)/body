{
  List<String> created=new ArrayList<>();
  for (  String name : names) {
    boolean success=false;
    try {
      assertAcked(prepareCreate(name));
      created.add(name);
      success=true;
    }
  finally {
      if (!success && !created.isEmpty()) {
        immutableCluster().wipeIndices(created.toArray(new String[created.size()]));
      }
    }
  }
}
