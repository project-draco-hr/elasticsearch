{
  threadPool.cached().execute(new Runnable(){
    @Override public void run(){
      try {
        RecoveryResponse response=recover(request);
        channel.sendResponse(response);
      }
 catch (      Exception e) {
        try {
          channel.sendResponse(e);
        }
 catch (        Exception e1) {
        }
      }
    }
  }
);
}
