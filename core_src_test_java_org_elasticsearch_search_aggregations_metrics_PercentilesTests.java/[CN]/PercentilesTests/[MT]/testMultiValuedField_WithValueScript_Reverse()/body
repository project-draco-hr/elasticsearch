{
  final double[] pcts=randomPercentiles();
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(randomCompression(percentiles("percentiles")).field("values").script(new Script("_value * -1")).percentiles(pcts)).execute().actionGet();
  assertThat(searchResponse.getHits().getTotalHits(),equalTo(10l));
  final Percentiles percentiles=searchResponse.getAggregations().get("percentiles");
  assertConsistent(pcts,percentiles,-maxValues,-minValues);
}
