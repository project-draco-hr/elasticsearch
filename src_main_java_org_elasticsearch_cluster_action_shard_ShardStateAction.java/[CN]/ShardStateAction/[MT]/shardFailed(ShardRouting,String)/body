{
  logger.warn("sending failed shard for {}, reason [{}]",shardRouting,reason);
  DiscoveryNodes nodes=clusterService.state().nodes();
  if (nodes.localNodeMaster()) {
    innerShardFailed(shardRouting,reason);
  }
 else {
    transportService.sendRequest(clusterService.state().nodes().masterNode(),ShardFailedTransportHandler.ACTION,new ShardRoutingEntry(shardRouting,reason),new EmptyTransportResponseHandler(ThreadPool.Names.SAME){
      @Override public void handleException(      TransportException exp){
        logger.warn("failed to send failed shard to [{}]",exp,clusterService.state().nodes().masterNode());
      }
    }
);
  }
}
