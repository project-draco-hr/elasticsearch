{
  if (logger.isDebugEnabled()) {
    logger.debug("sending shard started for {}, reason [{}]",shardRouting,reason);
  }
  DiscoveryNodes nodes=clusterService.state().nodes();
  if (nodes.localNodeMaster()) {
    innerShardStarted(shardRouting,reason);
  }
 else {
    transportService.sendRequest(clusterService.state().nodes().masterNode(),ShardStartedTransportHandler.ACTION,new ShardRoutingEntry(shardRouting,reason),new EmptyTransportResponseHandler(ThreadPool.Names.SAME){
      @Override public void handleException(      TransportException exp){
        logger.warn("failed to send shard started to [{}]",exp,clusterService.state().nodes().masterNode());
      }
    }
);
  }
}
