{
  IndexService indexService=createIndex("test");
  DocumentMapperParser parser=indexService.mapperService().documentMapperParser();
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").endObject().endObject().string();
  DocumentMapper mapper=parser.parse("type",new CompressedXContent(mapping));
  assertEquals(mapping,serialize(mapper));
  Mapper update=parse(mapper,parser,XContentFactory.jsonBuilder().startObject().startArray("foo").value("bar").value("baz").endArray().endObject());
  assertNotNull(update);
  assertEquals(mapping,serialize(mapper));
  assertEquals(XContentFactory.jsonBuilder().startObject().startObject("type").startObject("properties").startObject("foo").field("type","text").endObject().endObject().endObject().endObject().string(),serialize(update));
}
