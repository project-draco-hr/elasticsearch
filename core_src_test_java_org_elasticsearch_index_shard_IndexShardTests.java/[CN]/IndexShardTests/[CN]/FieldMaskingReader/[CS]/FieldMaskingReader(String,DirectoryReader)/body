{
  super(in,new SubReaderWrapper(){
    private final String filteredField=field;
    @Override public LeafReader wrap(    LeafReader reader){
      return new FilterLeafReader(reader){
        @Override public Fields fields() throws IOException {
          return new FilterFields(super.fields()){
            @Override public Terms terms(            String field) throws IOException {
              return filteredField.equals(field) ? null : super.terms(field);
            }
          }
;
        }
      }
;
    }
  }
);
  this.field=field;
}
