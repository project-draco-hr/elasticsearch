{
  if (now)   advanceRunLevel(SHUTDOWN);
 else   if (runState < SHUTDOWN || !submissionQueue.isEmpty() || (runState & ACTIVE_COUNT_MASK) != 0)   return false;
  if (advanceRunLevel(TERMINATING))   startTerminating();
  if ((workerCounts >>> TOTAL_COUNT_SHIFT) == 0) {
    advanceRunLevel(TERMINATED);
    terminationLatch.countDown();
  }
  return true;
}
