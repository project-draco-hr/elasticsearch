{
  if (randomBoolean()) {
    return settingsBuilder().put(super.nodeSettings(nodeOrdinal)).put(Environment.PATH_REPO_SETTING.getKey(),getBwcIndicesPath()).build();
  }
 else {
    try {
      URI repoJarPatternUri=new URI("jar:" + getBwcIndicesPath().toUri().toString() + "*.zip!/repo/");
      return settingsBuilder().put(super.nodeSettings(nodeOrdinal)).putArray(URLRepository.ALLOWED_URLS_SETTING.getKey(),repoJarPatternUri.toString()).build();
    }
 catch (    URISyntaxException ex) {
      throw new IllegalArgumentException(ex);
    }
  }
}
