{
  client().prepareIndex("test","doc","1").setSource("text","this is not a number").setRefresh(true).get();
  try {
    buildRequest("doc['text']").get();
    fail("Expected text field to cause execution failure");
  }
 catch (  SearchPhaseExecutionException e) {
    assertThat(e.toString() + "should have contained ExpressionScriptCompilationException",e.toString().contains("ExpressionScriptCompilationException"),equalTo(true));
    assertThat(e.toString() + "should have contained non-numeric field error",e.toString().contains("must be numeric"),equalTo(true));
  }
}
