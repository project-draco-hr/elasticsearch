{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").endObject().endObject().string();
  DocumentMapper docMapper=MapperTests.newParser().parse(mapping);
  ParsedDocument doc=docMapper.parse(SourceToParse.source(XContentFactory.jsonBuilder().startObject().field("_parent","1122").field("x_field","x_value").endObject().copiedBytes()).type("type").id("1"));
  assertThat(doc.rootDoc().get("_parent"),equalTo("1122"));
}
