{
  if (node != null) {
    node.thread=null;
    retry:     for (; ; ) {
      for (WaitNode pred=null, q=waiters, s; q != null; q=s) {
        s=q.next;
        if (q.thread != null)         pred=q;
 else         if (pred != null) {
          pred.next=s;
          if (pred.thread == null)           continue retry;
        }
 else         if (!UNSAFE.compareAndSwapObject(this,WAITERS,q,s))         continue retry;
      }
      break;
    }
  }
}
