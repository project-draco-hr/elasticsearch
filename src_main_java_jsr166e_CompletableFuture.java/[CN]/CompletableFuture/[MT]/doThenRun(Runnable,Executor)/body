{
  if (action == null)   throw new NullPointerException();
  CompletableFuture<Void> dst=new CompletableFuture<Void>();
  ThenRun d=null;
  Object r;
  if ((r=result) == null) {
    CompletionNode p=new CompletionNode(d=new ThenRun(this,action,dst,e));
    while ((r=result) == null) {
      if (UNSAFE.compareAndSwapObject(this,COMPLETIONS,p.next=completions,p))       break;
    }
  }
  if (r != null && (d == null || d.compareAndSet(0,1))) {
    Throwable ex;
    if (r instanceof AltResult)     ex=((AltResult)r).ex;
 else     ex=null;
    if (ex == null) {
      try {
        if (e != null)         e.execute(new AsyncRun(action,dst));
 else         action.run();
      }
 catch (      Throwable rex) {
        ex=rex;
      }
    }
    if (e == null || ex != null)     dst.internalComplete(null,ex);
  }
  helpPostComplete();
  return dst;
}
