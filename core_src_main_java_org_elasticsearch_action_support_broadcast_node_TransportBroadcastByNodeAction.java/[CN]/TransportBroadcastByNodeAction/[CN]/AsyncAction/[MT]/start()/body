{
  if (nodeIds.size() == 0) {
    try {
      onCompletion();
    }
 catch (    Throwable e) {
      listener.onFailure(e);
    }
  }
 else {
    int nodeIndex=-1;
    for (    Map.Entry<String,List<ShardRouting>> entry : nodeIds.entrySet()) {
      nodeIndex++;
      DiscoveryNode node=nodes.get(entry.getKey());
      sendNodeRequest(node,entry.getValue(),nodeIndex);
    }
  }
}
