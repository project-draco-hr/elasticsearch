{
  int lo=0;
  int hi=subReaders.length - 1;
  while (hi >= lo) {
    int mid=(lo + hi) >>> 1;
    int midValue=docStarts[mid];
    if (doc < midValue)     hi=mid - 1;
 else     if (doc > midValue)     lo=mid + 1;
 else {
      while (mid + 1 < subReaders.length && docStarts[mid + 1] == midValue) {
        mid++;
      }
      return mid;
    }
  }
  return hi;
}
