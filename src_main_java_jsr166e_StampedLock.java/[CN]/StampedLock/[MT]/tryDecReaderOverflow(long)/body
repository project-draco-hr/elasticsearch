{
  if ((s & ABITS) == RFULL) {
    if (U.compareAndSwapLong(this,STATE,s,s | RBITS)) {
      int r;
      long next;
      if ((r=readerOverflow) > 0) {
        readerOverflow=r - 1;
        next=s;
      }
 else       next=s - RUNIT;
      state=next;
      return next;
    }
  }
 else   if ((ThreadLocalRandom.current().nextInt() & OVERFLOW_YIELD_RATE) == 0)   Thread.yield();
  return 0L;
}
