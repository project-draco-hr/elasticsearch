{
  client().admin().indices().prepareCreate("test").addMapping("type1","field1","type=string,omit_term_freq_and_positions=true").setSettings(ImmutableSettings.settingsBuilder().put("index.number_of_shards",1)).get();
  indexRandom(true,client().prepareIndex("test","type1","1").setSource("field1","quick brown fox","field2","quick brown fox"),client().prepareIndex("test","type1","2").setSource("field1","quick lazy huge brown fox","field2","quick lazy huge brown fox"));
  CountResponse countResponse=client().prepareCount().setQuery(QueryBuilders.matchQuery("field2","quick brown").type(Type.PHRASE).slop(0)).execute().actionGet();
  assertHitCount(countResponse,1l);
  try {
    client().prepareCount().setQuery(QueryBuilders.matchQuery("field1","quick brown").type(Type.PHRASE).slop(0)).execute().actionGet();
  }
 catch (  SearchPhaseExecutionException e) {
    assertTrue(e.getMessage().endsWith("IllegalStateException[field \"field1\" was indexed without position data; cannot run PhraseQuery (term=quick)]; }"));
  }
}
