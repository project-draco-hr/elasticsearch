{
  Map<String,Object> params=new HashMap<>();
  params.put("dec",1);
  final double[] pcts=randomPercentiles();
  int sigDigits=randomSignificantDigits();
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(percentiles("percentiles").numberOfSignificantValueDigits(sigDigits).method(PercentilesMethod.HDR).script(new Script("doc['value'].value - dec",ScriptType.INLINE,null,params)).percentiles(pcts)).execute().actionGet();
  assertHitCount(searchResponse,10);
  final Percentiles percentiles=searchResponse.getAggregations().get("percentiles");
  assertConsistent(pcts,percentiles,minValue - 1,maxValue - 1,sigDigits);
}
