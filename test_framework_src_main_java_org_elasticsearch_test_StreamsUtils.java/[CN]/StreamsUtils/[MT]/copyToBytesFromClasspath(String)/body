{
  try (InputStream is=Streams.class.getResourceAsStream(path)){
    if (is == null) {
      throw new FileNotFoundException("Resource [" + path + "] not found in classpath");
    }
    try (BytesStreamOutput out=new BytesStreamOutput()){
      Streams.copy(is,out);
      return out.bytes().toBytes();
    }
   }
 }
