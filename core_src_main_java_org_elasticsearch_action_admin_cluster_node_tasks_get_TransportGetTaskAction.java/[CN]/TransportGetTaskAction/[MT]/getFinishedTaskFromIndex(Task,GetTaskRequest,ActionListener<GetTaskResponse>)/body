{
  GetRequest get=new GetRequest(TaskPersistenceService.TASK_INDEX,TaskPersistenceService.TASK_TYPE,request.getTaskId().toString());
  get.setParentTask(clusterService.localNode().getId(),thisTask.getId());
  client.get(get,new ActionListener<GetResponse>(){
    @Override public void onResponse(    GetResponse getResponse){
      try {
        onGetFinishedTaskFromIndex(getResponse,listener);
      }
 catch (      Throwable e) {
        listener.onFailure(e);
      }
    }
    @Override public void onFailure(    Throwable e){
      if (ExceptionsHelper.unwrap(e,IndexNotFoundException.class) != null) {
        listener.onFailure(new ResourceNotFoundException("task [{}] isn't running or persisted",e,request.getTaskId()));
      }
 else {
        listener.onFailure(e);
      }
    }
  }
);
}
