{
  final double[] pcts=randomPercents(-maxValues,-minValues);
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(randomCompression(percentileRanks("percentile_ranks")).field("values").script(new Script("_value * -1")).percentiles(pcts)).execute().actionGet();
  assertThat(searchResponse.getHits().getTotalHits(),equalTo(10l));
  final PercentileRanks percentiles=searchResponse.getAggregations().get("percentile_ranks");
  assertConsistent(pcts,percentiles,-maxValues,-minValues);
}
