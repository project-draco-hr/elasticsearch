{
  createIndex("test");
  ensureGreen();
  client().prepareIndex("test","type1").setSource(jsonBuilder().startObject().field("tag","green").endObject()).execute().actionGet();
  refresh();
  SearchResponse searchResponse=client().prepareSearch().setSearchType(SearchType.COUNT).setFacets(new BytesArray("{\"facet1\":{\"filter\":{ }}}")).get();
  assertHitCount(searchResponse,1l);
  assertThat(searchResponse.getHits().hits().length,equalTo(0));
  FilterFacet facet=searchResponse.getFacets().facet("facet1");
  assertThat(facet.getName(),equalTo("facet1"));
  assertThat(facet.getCount(),equalTo(1l));
}
