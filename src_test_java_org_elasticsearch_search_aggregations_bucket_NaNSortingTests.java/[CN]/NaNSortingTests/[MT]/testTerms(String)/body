{
  final boolean asc=randomBoolean();
  SubAggregation agg=randomFrom(SubAggregation.values());
  SearchResponse response=client().prepareSearch("idx").addAggregation(terms("terms").field(fieldName).subAggregation(agg.builder()).order(Terms.Order.aggregation(agg.sortKey(),asc))).execute().actionGet();
  final Terms terms=response.getAggregations().get("terms");
  assertCorrectlySorted(terms,asc,agg);
}
