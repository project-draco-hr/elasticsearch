{
  UpdateResponse updateResponse=client().prepareUpdate("test","type1","1").setUpsert(XContentFactory.jsonBuilder().startObject().field("bar","baz").endObject()).setScript(new Script("",ScriptService.ScriptType.INLINE,"put_values",Collections.singletonMap("extra","foo"))).setFields("_source").execute().actionGet();
  assertThat(updateResponse.getIndex(),equalTo("test"));
  assertThat(updateResponse.getGetResult(),notNullValue());
  assertThat(updateResponse.getGetResult().getIndex(),equalTo("test"));
  assertThat(updateResponse.getGetResult().sourceAsMap().get("bar").toString(),equalTo("baz"));
  assertThat(updateResponse.getGetResult().sourceAsMap().get("extra"),nullValue());
}
