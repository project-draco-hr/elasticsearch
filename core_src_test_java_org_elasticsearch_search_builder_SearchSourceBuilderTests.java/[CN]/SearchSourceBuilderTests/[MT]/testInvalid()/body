{
  String restContent=" { \"query\": {\n" + "    \"multi_match\": {\n" + "      \"query\": \"workd\",\n"+ "      \"fields\": [\"title^5\", \"plain_body\"]\n"+ "    },\n"+ "    \"filters\": {\n"+ "      \"terms\": {\n"+ "        \"status\": [ 3 ]\n"+ "      }\n"+ "    }\n"+ "  } }";
  try (XContentParser parser=XContentFactory.xContent(restContent).createParser(restContent)){
    SearchSourceBuilder.fromXContent(createParseContext(parser),searchRequestParsers.aggParsers,searchRequestParsers.suggesters,searchRequestParsers.searchExtParsers);
    fail("invalid query syntax multiple keys under query");
  }
 catch (  ParsingException e) {
    assertThat(e.getMessage(),containsString("filters"));
  }
}
