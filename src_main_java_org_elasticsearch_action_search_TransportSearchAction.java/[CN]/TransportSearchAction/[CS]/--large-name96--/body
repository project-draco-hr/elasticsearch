{
  super(settings,SearchAction.NAME,threadPool,actionFilters);
  this.clusterService=clusterService;
  this.dfsQueryThenFetchAction=dfsQueryThenFetchAction;
  this.queryThenFetchAction=queryThenFetchAction;
