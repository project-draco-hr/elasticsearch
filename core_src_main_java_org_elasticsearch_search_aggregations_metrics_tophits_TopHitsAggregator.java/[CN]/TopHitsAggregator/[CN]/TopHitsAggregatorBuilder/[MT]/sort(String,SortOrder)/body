{
  if (name == null) {
    throw new IllegalArgumentException("sort [name] must not be null: [" + name + "]");
  }
  if (order == null) {
    throw new IllegalArgumentException("sort [order] must not be null: [" + name + "]");
  }
  sort(SortBuilders.fieldSort(name).order(order));
  return this;
}
