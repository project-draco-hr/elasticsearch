{
  try {
    if (sorts == null) {
      sorts=new ArrayList<>();
    }
    XContentBuilder builder=XContentFactory.jsonBuilder();
    builder.startObject();
    sort.toXContent(builder,EMPTY_PARAMS);
    builder.endObject();
    sorts.add(builder.bytes());
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
  return this;
}
