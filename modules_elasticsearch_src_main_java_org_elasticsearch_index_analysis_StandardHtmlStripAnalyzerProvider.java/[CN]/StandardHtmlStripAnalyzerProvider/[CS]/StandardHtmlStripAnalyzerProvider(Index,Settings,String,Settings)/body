{
  super(index,indexSettings,name);
  analyzer=new CustomAnalyzer(new StandardTokenizerFactory(index,indexSettings,name,settings),new CharFilterFactory[]{new HtmlStripCharFilterFactory(index,indexSettings,name,settings)},new TokenFilterFactory[]{new StandardTokenFilterFactory(index,indexSettings,name,settings),new LowerCaseTokenFilterFactory(index,indexSettings,name,settings),new StopTokenFilterFactory(index,indexSettings,name,settings)});
}
