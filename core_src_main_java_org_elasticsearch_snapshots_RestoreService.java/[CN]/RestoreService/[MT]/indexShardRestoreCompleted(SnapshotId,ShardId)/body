{
  logger.trace("[{}] successfully restored shard  [{}]",snapshotId,shardId);
  UpdateIndexShardRestoreStatusRequest request=new UpdateIndexShardRestoreStatusRequest(snapshotId,shardId,new ShardRestoreStatus(clusterService.state().nodes().localNodeId(),RestoreInProgress.State.SUCCESS));
  transportService.sendRequest(clusterService.state().nodes().masterNode(),UPDATE_RESTORE_ACTION_NAME,request,EmptyTransportResponseHandler.INSTANCE_SAME);
}
