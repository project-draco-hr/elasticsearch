{
  logger.info("starting twitter stream");
  try {
    String mapping=XContentFactory.jsonBuilder().startObject().startObject(typeName).startObject("properties").startObject("location").field("type","geo_point").endObject().endObject().endObject().endObject().string();
    client.admin().indices().prepareCreate(indexName).addMapping(typeName,mapping).execute().actionGet();
  }
 catch (  Exception e) {
    if (ExceptionsHelper.unwrapCause(e) instanceof IndexAlreadyExistsException) {
    }
 else     if (ExceptionsHelper.unwrapCause(e) instanceof ClusterBlockException) {
    }
 else {
      logger.warn("failed to create index [{}], disabling river...",e,indexName);
      return;
    }
  }
  currentRequest=client.prepareBulk();
  stream.sample();
}
