{
  if (indexOrType.indexOf(',') >= 0) {
    throw new IllegalArgumentException(name + " containing [,] not supported but got [" + indexOrType+ "]");
  }
  if (indexOrType.indexOf('/') >= 0) {
    throw new IllegalArgumentException(name + " containing [/] not supported but got [" + indexOrType+ "]");
  }
}
