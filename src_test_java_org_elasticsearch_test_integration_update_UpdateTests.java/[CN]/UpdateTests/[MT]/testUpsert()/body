{
  createIndex();
  ensureGreen();
  UpdateResponse updateResponse=client().prepareUpdate("test","type1","1").setUpsert(XContentFactory.jsonBuilder().startObject().field("field",1).endObject()).setScript("ctx._source.field += 1").execute().actionGet();
  assertTrue(updateResponse.isCreated());
  for (int i=0; i < 5; i++) {
    GetResponse getResponse=client().prepareGet("test","type1","1").execute().actionGet();
    assertThat(getResponse.getSourceAsMap().get("field").toString(),equalTo("1"));
  }
  updateResponse=client().prepareUpdate("test","type1","1").setUpsert(XContentFactory.jsonBuilder().startObject().field("field",1).endObject()).setScript("ctx._source.field += 1").execute().actionGet();
  assertFalse(updateResponse.isCreated());
  for (int i=0; i < 5; i++) {
    GetResponse getResponse=client().prepareGet("test","type1","1").execute().actionGet();
    assertThat(getResponse.getSourceAsMap().get("field").toString(),equalTo("2"));
  }
}
