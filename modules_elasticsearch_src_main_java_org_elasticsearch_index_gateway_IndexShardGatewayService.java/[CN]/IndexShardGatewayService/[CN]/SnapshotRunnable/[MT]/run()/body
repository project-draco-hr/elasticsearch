{
  try {
    snapshot("scheduled");
  }
 catch (  Throwable e) {
    if (indexShard.state() == IndexShardState.CLOSED) {
      return;
    }
    logger.warn("failed to snapshot (scheduled)",e);
  }
  if (indexShard.state() != IndexShardState.CLOSED) {
    snapshotScheduleFuture=threadPool.schedule(this,snapshotInterval,ThreadPool.ExecutionType.THREADED);
  }
}
