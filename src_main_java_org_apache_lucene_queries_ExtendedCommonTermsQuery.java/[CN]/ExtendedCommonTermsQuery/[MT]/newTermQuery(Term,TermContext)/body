{
  if (mapper == null) {
    return context == null ? new TermQuery(term) : new TermQuery(term,context);
  }
  final Query query=mapper.queryStringTermQuery(term);
  if (query == null) {
    return context == null ? new TermQuery(term) : new TermQuery(term,context);
  }
 else {
    return query;
  }
}
