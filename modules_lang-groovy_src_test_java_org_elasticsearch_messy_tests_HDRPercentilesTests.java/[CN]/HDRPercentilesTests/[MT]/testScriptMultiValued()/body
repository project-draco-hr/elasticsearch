{
  final double[] pcts=randomPercentiles();
  int sigDigits=randomSignificantDigits();
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(percentiles("percentiles").numberOfSignificantValueDigits(sigDigits).method(PercentilesMethod.HDR).script(new Script("doc['values'].values")).percentiles(pcts)).execute().actionGet();
  assertHitCount(searchResponse,10);
  final Percentiles percentiles=searchResponse.getAggregations().get("percentiles");
  assertConsistent(pcts,percentiles,minValues,maxValues,sigDigits);
}
