{
  String corsValue="http://localhost:9200";
  try (ElasticsearchResponse response=getRestClient().performRequest("OPTIONS","/",Collections.emptyMap(),null,new BasicHeader("User-Agent","Mozilla Bar"),new BasicHeader("Origin",corsValue),new BasicHeader(HttpHeaders.Names.ACCESS_CONTROL_REQUEST_METHOD,"GET"))){
    assertResponseWithOriginheader(response,corsValue);
    assertNotNull(response.getFirstHeader("Access-Control-Allow-Methods"));
  }
 }
