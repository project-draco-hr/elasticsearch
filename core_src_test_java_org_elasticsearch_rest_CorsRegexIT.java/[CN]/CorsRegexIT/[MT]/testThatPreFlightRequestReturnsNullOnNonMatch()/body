{
  HttpResponse response=httpClient().method("OPTIONS").path("/").addHeader("User-Agent","Mozilla Bar").addHeader("Origin","http://evil-host:9200").addHeader(HttpHeaders.Names.ACCESS_CONTROL_REQUEST_METHOD,"GET").execute();
  assertThat(response.getStatusCode(),is(403));
  assertThat(response.getHeaders(),not(hasKey("Access-Control-Allow-Origin")));
  assertThat(response.getHeaders(),not(hasKey("Access-Control-Allow-Methods")));
}
