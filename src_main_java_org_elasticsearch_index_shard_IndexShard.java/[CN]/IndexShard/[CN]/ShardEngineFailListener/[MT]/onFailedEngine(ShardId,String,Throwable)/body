{
  try {
    for (    Engine.FailedEngineListener listener : delegates) {
      try {
        listener.onFailedEngine(shardId,reason,failure);
      }
 catch (      Exception e) {
        logger.warn("exception while notifying engine failure",e);
      }
    }
  }
  finally {
    try {
      deleteShardState();
    }
 catch (    IOException e) {
      logger.warn("failed to delete shard state",e);
    }
  }
}
