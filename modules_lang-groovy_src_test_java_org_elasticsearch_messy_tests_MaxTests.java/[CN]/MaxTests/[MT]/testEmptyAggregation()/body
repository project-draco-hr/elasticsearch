{
  SearchResponse searchResponse=client().prepareSearch("empty_bucket_idx").setQuery(matchAllQuery()).addAggregation(histogram("histo").field("value").interval(1L).minDocCount(0).subAggregation(max("max").field("value"))).execute().actionGet();
  assertThat(searchResponse.getHits().getTotalHits(),equalTo(2L));
  Histogram histo=searchResponse.getAggregations().get("histo");
  assertThat(histo,notNullValue());
  Histogram.Bucket bucket=histo.getBuckets().get(1);
  assertThat(bucket,notNullValue());
  Max max=bucket.getAggregations().get("max");
  assertThat(max,notNullValue());
  assertThat(max.getName(),equalTo("max"));
  assertThat(max.getValue(),equalTo(Double.NEGATIVE_INFINITY));
}
