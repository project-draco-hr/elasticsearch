{
  super(index,indexSettings);
  this.location=new File(new File(new File(environment.workWithClusterFile(),"indices"),localNodeId),index.name());
  if (!location.exists()) {
    boolean result=false;
    for (int i=0; i < 5; i++) {
      result=location.mkdirs();
      if (result) {
        break;
      }
    }
  }
}
