{
  if (index == Defaults.INDEX && store == Defaults.STORE && enabled == Defaults.ENABLED && path == Defaults.PATH && dateTimeFormatter.format().equals(Defaults.DATE_TIME_FORMATTER.format())) {
    return builder;
  }
  builder.startObject(CONTENT_TYPE);
  if (index != Defaults.INDEX) {
    builder.field("index",index.name().toLowerCase());
  }
  if (store != Defaults.STORE) {
    builder.field("store",store.name().toLowerCase());
  }
  if (enabled != Defaults.ENABLED) {
    builder.field("enabled",enabled);
  }
  if (path != Defaults.PATH) {
    builder.field("path",path);
  }
  if (!dateTimeFormatter.format().equals(Defaults.DATE_TIME_FORMATTER.format())) {
    builder.field("format",dateTimeFormatter.format());
  }
  builder.endObject();
  return builder;
}
