{
  int shardsCount=0;
  for (  IndexService indexService : indicesService) {
    for (    IndexShard indexShard : indexService) {
      ShardIndexingStatus status=shardsIndicesStatus.get(indexShard.shardId());
      if (status == null || !status.inactive) {
        shardsCount++;
      }
    }
  }
  return shardsCount;
}
