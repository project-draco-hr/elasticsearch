{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").startObject("_ttl").field("enabled","yes").field("store","no").endObject().endObject().endObject().string();
  Settings indexSettings=Settings.builder().put(IndexMetaData.SETTING_VERSION_CREATED,Version.V_1_4_2.id).build();
  DocumentMapper docMapper=createIndex("test",indexSettings).mapperService().documentMapperParser().parse(mapping);
  assertThat(docMapper.TTLFieldMapper().enabled(),equalTo(true));
  assertThat(docMapper.TTLFieldMapper().fieldType().stored(),equalTo(true));
}
