{
  SearchResponse response=client().prepareSearch("idx").setTypes("type").addAggregation(terms("terms").field(SINGLE_VALUED_FIELD_NAME).include(includes).exclude(excludes).collectMode(randomFrom(SubAggCollectionMode.values()))).execute().actionGet();
  assertSearchResponse(response);
  Terms terms=response.getAggregations().get("terms");
  assertThat(terms,notNullValue());
  assertThat(terms.getName(),equalTo("terms"));
  assertThat(terms.getBuckets().size(),equalTo(expecteds.length));
  for (int i=0; i < expecteds.length; i++) {
    Terms.Bucket bucket=terms.getBucketByKey("" + expecteds[i]);
    assertThat(bucket,notNullValue());
    assertThat(bucket.getDocCount(),equalTo(1l));
  }
}
