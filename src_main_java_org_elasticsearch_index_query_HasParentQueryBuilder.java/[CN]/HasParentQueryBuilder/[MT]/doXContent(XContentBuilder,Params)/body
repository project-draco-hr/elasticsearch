{
  builder.startObject(HasParentQueryParser.NAME);
  builder.field("query");
  queryBuilder.toXContent(builder,params);
  builder.field("parent_type",parentType);
  if (scoreType != null) {
    builder.field("score_type",scoreType);
  }
  if (boost != 1.0f) {
    builder.field("boost",boost);
  }
  builder.endObject();
}
