{
  SearchResponse response=client().prepareSearch("idx").addAggregation(dateHistogram("histo").field("date").interval(DateHistogramInterval.MONTH).order(Histogram.Order.aggregation("sum",false)).subAggregation(max("sum").field("value"))).execute().actionGet();
  assertSearchResponse(response);
  Histogram histo=response.getAggregations().get("histo");
  assertThat(histo,notNullValue());
  assertThat(histo.getName(),equalTo("histo"));
  assertThat(histo.getBuckets().size(),equalTo(3));
  int i=2;
  for (  Histogram.Bucket bucket : histo.getBuckets()) {
    assertThat(((DateTime)bucket.getKey()),equalTo(new DateTime(2012,i + 1,1,0,0,DateTimeZone.UTC)));
    i--;
  }
}
