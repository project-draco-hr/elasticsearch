{
  String mapping=XContentFactory.contentTextBuilder(XContentType.JSON).startObject().startObject("type").startObject("properties").startObject("point").field("type","geo_point").endObject().endObject().endObject().endObject().string();
  XContentDocumentMapper defaultMapper=XContentMapperTests.newParser().parse(mapping);
  ParsedDocument doc=defaultMapper.parse("type","1",XContentFactory.jsonBuilder().startObject().field("point","1.2,1.3").endObject().copiedBytes());
  assertThat(doc.doc().getField("point.lat"),notNullValue());
  assertThat(doc.doc().getField("point.lon"),notNullValue());
  assertThat(doc.doc().getField("point.geohash"),nullValue());
}
