{
  assertAcked(prepareCreate("test").addMapping("parent").addMapping("child","_parent","type=parent"));
  ensureGreen();
  client().prepareIndex("test","parent","1").setSource("p_field",1).get();
  client().prepareIndex("test","child","1").setParent("1").setSource("c_field",1).get();
  client().admin().indices().prepareFlush("test").get();
  client().prepareIndex("test","type1","1").setSource("p_field",1).get();
  client().admin().indices().prepareFlush("test").get();
  SearchResponse searchResponse=client().prepareSearch("test").setQuery(boolQuery().must(matchAllQuery()).filter(hasChildQuery("child",matchAllQuery()))).get();
  assertNoFailures(searchResponse);
  assertThat(searchResponse.getHits().totalHits(),equalTo(1l));
  searchResponse=client().prepareSearch("test").setQuery(boolQuery().must(matchAllQuery()).filter(hasParentQuery("parent",matchAllQuery()))).get();
  assertNoFailures(searchResponse);
  assertThat(searchResponse.getHits().totalHits(),equalTo(1l));
}
