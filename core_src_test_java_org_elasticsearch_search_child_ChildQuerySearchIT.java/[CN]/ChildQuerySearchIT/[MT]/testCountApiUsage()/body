{
  assertAcked(prepareCreate("test").addMapping("parent").addMapping("child","_parent","type=parent"));
  ensureGreen();
  String parentId="p1";
  client().prepareIndex("test","parent",parentId).setSource("p_field","1").get();
  client().prepareIndex("test","child","c1").setSource("c_field","1").setParent(parentId).get();
  refresh();
  SearchResponse countResponse=client().prepareSearch("test").setSize(0).setQuery(hasChildQuery("child",termQuery("c_field","1")).scoreMode(ScoreMode.Max)).get();
  assertHitCount(countResponse,1L);
  countResponse=client().prepareSearch("test").setSize(0).setQuery(hasParentQuery("parent",termQuery("p_field","1")).score(true)).get();
  assertHitCount(countResponse,1L);
  countResponse=client().prepareSearch("test").setSize(0).setQuery(constantScoreQuery(hasChildQuery("child",termQuery("c_field","1")))).get();
  assertHitCount(countResponse,1L);
  countResponse=client().prepareSearch("test").setSize(0).setQuery(constantScoreQuery(hasParentQuery("parent",termQuery("p_field","1")))).get();
  assertHitCount(countResponse,1L);
}
