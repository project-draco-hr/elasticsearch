{
  try (ReleasableLock lock=readLock.acquire()){
    if (closed.get() == false) {
      current.sync();
    }
  }
 catch (  AlreadyClosedException|IOException ex) {
    if (current.getTragicException() != null) {
      try {
        close();
      }
 catch (      Exception inner) {
        ex.addSuppressed(inner);
      }
    }
    throw ex;
  }
}
