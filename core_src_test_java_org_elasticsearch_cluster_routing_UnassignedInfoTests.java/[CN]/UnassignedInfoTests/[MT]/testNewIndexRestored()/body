{
  MetaData metaData=MetaData.builder().put(IndexMetaData.builder("test").settings(settings(Version.CURRENT)).numberOfShards(randomIntBetween(1,3)).numberOfReplicas(randomIntBetween(0,3))).build();
  ClusterState clusterState=ClusterState.builder(ClusterName.DEFAULT).metaData(metaData).routingTable(RoutingTable.builder().addAsNewRestore(metaData.index("test"),new RestoreSource(new SnapshotId("rep1","snp1"),"test"),new IntHashSet())).build();
  for (  MutableShardRouting shard : clusterState.routingNodes().shardsWithState(UNASSIGNED)) {
    assertThat(shard.unassignedInfo().getReason(),equalTo(UnassignedInfo.Reason.NEW_INDEX_RESTORED));
  }
}
