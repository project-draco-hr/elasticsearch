{
  MetaData metaData=MetaData.builder().put(IndexMetaData.builder("test").settings(settings(Version.CURRENT)).numberOfShards(randomIntBetween(1,3)).numberOfReplicas(randomIntBetween(0,3))).build();
  ClusterState clusterState=ClusterState.builder(ClusterName.DEFAULT).metaData(metaData).routingTable(RoutingTable.builder().addAsRestore(metaData.index("test"),new RestoreSource(new SnapshotId("rep1","snp1"),Version.CURRENT,"test"))).build();
  for (  ShardRouting shard : clusterState.routingNodes().shardsWithState(UNASSIGNED)) {
    assertThat(shard.unassignedInfo().getReason(),equalTo(UnassignedInfo.Reason.EXISTING_INDEX_RESTORED));
  }
}
