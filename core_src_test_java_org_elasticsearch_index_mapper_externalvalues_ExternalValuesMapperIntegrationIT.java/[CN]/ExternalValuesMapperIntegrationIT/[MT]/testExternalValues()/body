{
  prepareCreate("test-idx").addMapping("type",XContentFactory.jsonBuilder().startObject().startObject("type").startObject(ExternalMetadataMapper.CONTENT_TYPE).endObject().startObject("properties").startObject("field").field("type",RegisterExternalTypes.EXTERNAL).endObject().endObject().endObject().endObject()).execute().get();
  ensureYellow("test-idx");
  index("test-idx","type","1",XContentFactory.jsonBuilder().startObject().field("field","1234").endObject());
  refresh();
  SearchResponse response;
  response=client().prepareSearch("test-idx").setPostFilter(QueryBuilders.termQuery("field.bool","T")).execute().actionGet();
  assertThat(response.getHits().totalHits(),equalTo((long)1));
  response=client().prepareSearch("test-idx").setPostFilter(QueryBuilders.geoDistanceRangeQuery("field.point",42.0,51.0).to("1km")).execute().actionGet();
  assertThat(response.getHits().totalHits(),equalTo((long)1));
  response=client().prepareSearch("test-idx").setPostFilter(QueryBuilders.geoShapeQuery("field.shape",ShapeBuilder.newPoint(-100,45)).relation(ShapeRelation.WITHIN)).execute().actionGet();
  assertThat(response.getHits().totalHits(),equalTo((long)1));
  response=client().prepareSearch("test-idx").setPostFilter(QueryBuilders.termQuery("field.field","foo")).execute().actionGet();
  assertThat(response.getHits().totalHits(),equalTo((long)1));
}
