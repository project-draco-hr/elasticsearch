{
  builder.startObject(name()).field(Fields.TYPE,CONTENT_TYPE);
  if (indexAnalyzer.name().equals(searchAnalyzer.name())) {
    builder.field(Fields.ANALYZER,indexAnalyzer.name());
  }
 else {
    builder.field(Fields.INDEX_ANALYZER,indexAnalyzer.name()).field(Fields.SEARCH_ANALYZER,searchAnalyzer.name());
  }
  builder.field(Fields.PAYLOADS,this.payloads).field(Fields.PRESERVE_SEPARATORS,this.preserveSeparators).field(Fields.PRESERVE_POSITION_INCREMENTS,this.preservePositionIncrements).endObject();
  return builder;
}
