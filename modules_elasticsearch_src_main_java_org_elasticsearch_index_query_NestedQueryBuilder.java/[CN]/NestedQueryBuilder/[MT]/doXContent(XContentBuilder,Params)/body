{
  builder.startObject(NestedQueryParser.NAME);
  builder.field("query");
  queryBuilder.toXContent(builder,params);
  builder.field("path",path);
  if (scoreMode != null) {
    builder.field("score_mode",scoreMode);
  }
  if (scope != null) {
    builder.field("_scope",scope);
  }
  if (boost != 1.0f) {
    builder.field("boost",boost);
  }
  builder.endObject();
}
