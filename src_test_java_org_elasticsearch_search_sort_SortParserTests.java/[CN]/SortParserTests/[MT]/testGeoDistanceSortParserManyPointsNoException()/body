  sortBuilder.value(1.2).value(3);
  sortBuilder.endArray();
  sortBuilder.field("order","desc");
  sortBuilder.field("unit","km");
  sortBuilder.field("sort_mode","max");
  sortBuilder.endObject();
  parse(context,sortBuilder);
