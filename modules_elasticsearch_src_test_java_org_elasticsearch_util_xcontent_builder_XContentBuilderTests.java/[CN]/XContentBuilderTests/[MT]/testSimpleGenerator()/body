{
  TextXContentBuilder builder=XContentFactory.contentTextBuilder(XContentType.JSON);
  builder.startObject().field("test","value").endObject();
  assertThat(builder.string(),equalTo("{\"test\":\"value\"}"));
  builder.reset();
  builder.startObject().field("test","value").endObject();
  assertThat(builder.string(),equalTo("{\"test\":\"value\"}"));
}
