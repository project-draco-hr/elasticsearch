{
  OpenBitSet result=null;
  TermDocs td=reader.termDocs();
  try {
    td.seek(term);
    if (td.next()) {
      result=new OpenBitSet(reader.maxDoc());
      result.fastSet(td.doc());
      while (td.next()) {
        result.fastSet(td.doc());
      }
    }
  }
  finally {
    td.close();
  }
  return result;
}
