{
  client.admin().indices().prepareDelete().execute().actionGet();
  client.admin().indices().prepareCreate("test").setSettings(ImmutableSettings.settingsBuilder().put("index.number_of_shards",1)).execute().actionGet();
  client.prepareIndex("test","type1","1").setSource("str","kimchy","date","2012-02-01","num",12).execute().actionGet();
  client.prepareIndex("test","type1","2").setSource("str","shay","date","2012-02-05","num",20).execute().actionGet();
  client.admin().indices().prepareRefresh().execute().actionGet();
  SearchResponse searchResponse=client.prepareSearch().setQuery(queryString("str:kimcy~1")).execute().actionGet();
  assertThat("Failures " + Arrays.toString(searchResponse.getShardFailures()),searchResponse.getShardFailures().length,equalTo(0));
  assertThat(searchResponse.getHits().totalHits(),equalTo(1l));
  assertThat(searchResponse.getHits().getAt(0).id(),equalTo("1"));
  searchResponse=client.prepareSearch().setQuery(queryString("num:11~1")).execute().actionGet();
  assertThat("Failures " + Arrays.toString(searchResponse.getShardFailures()),searchResponse.getShardFailures().length,equalTo(0));
  assertThat(searchResponse.getHits().totalHits(),equalTo(1l));
  assertThat(searchResponse.getHits().getAt(0).id(),equalTo("1"));
  searchResponse=client.prepareSearch().setQuery(queryString("date:2012-02-02~1d")).execute().actionGet();
  assertThat("Failures " + Arrays.toString(searchResponse.getShardFailures()),searchResponse.getShardFailures().length,equalTo(0));
  assertThat(searchResponse.getHits().totalHits(),equalTo(0l));
}
