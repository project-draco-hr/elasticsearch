{
  client().admin().indices().prepareCreate("test").setSettings(settingsBuilder().put("index.number_of_shards",2).put("index.number_of_replicas",0)).addMapping("type","{\"type\":{\"properties\":{\"body\":{\"type\":\"text\"}}}}").execute().actionGet();
  client().admin().cluster().prepareHealth().setWaitForEvents(Priority.LANGUID).setWaitForGreenStatus().execute().actionGet();
  PutMappingResponse putMappingResponse=client().admin().indices().preparePutMapping("test").setType("type").setSource("{\"type\":{\"properties\":{\"body\":{\"type\":\"text\"}}}}").execute().actionGet();
  assertThat(putMappingResponse.isAcknowledged(),equalTo(true));
}
