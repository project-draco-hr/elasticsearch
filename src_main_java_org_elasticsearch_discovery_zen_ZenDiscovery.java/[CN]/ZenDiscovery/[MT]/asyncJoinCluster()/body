{
  if (currentJoinThread != null) {
    logger.trace("a join thread already running");
    return;
  }
  threadPool.generic().execute(new Runnable(){
    @Override public void run(){
      currentJoinThread=Thread.currentThread();
      try {
        innerJoinCluster();
      }
  finally {
        currentJoinThread=null;
      }
    }
  }
);
}
