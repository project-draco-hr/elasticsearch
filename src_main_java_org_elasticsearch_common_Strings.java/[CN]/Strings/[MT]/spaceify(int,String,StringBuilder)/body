{
  final BufferedReader reader=new BufferedReader(new FastStringReader(from));
  try {
    String line;
    while ((line=reader.readLine()) != null) {
      for (int i=0; i < spaces; i++) {
        to.append(' ');
      }
      to.append(line).append('\n');
    }
  }
  finally {
    reader.close();
  }
}
