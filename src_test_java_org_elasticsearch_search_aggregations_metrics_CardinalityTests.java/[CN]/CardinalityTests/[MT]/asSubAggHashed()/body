{
  SearchResponse response=client().prepareSearch("idx").setTypes("type").addAggregation(terms("terms").field("str_value").subAggregation(cardinality("cardinality").precisionThreshold(precisionThreshold).field("str_values.hash"))).execute().actionGet();
  assertSearchResponse(response);
  Terms terms=response.getAggregations().get("terms");
  for (  Terms.Bucket bucket : terms.getBuckets()) {
    Cardinality count=bucket.getAggregations().get("cardinality");
    assertThat(count,notNullValue());
    assertThat(count.getName(),equalTo("cardinality"));
    assertCount(count,2);
  }
}
