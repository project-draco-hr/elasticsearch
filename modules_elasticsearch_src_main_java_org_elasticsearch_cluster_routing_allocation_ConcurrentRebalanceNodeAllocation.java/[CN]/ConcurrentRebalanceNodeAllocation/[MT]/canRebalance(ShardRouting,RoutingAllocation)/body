{
  if (clusterConcurrentRebalance == -1) {
    return true;
  }
  int rebalance=0;
  for (  RoutingNode node : allocation.routingNodes()) {
    for (    MutableShardRouting shard : node) {
      if (shard.state() == ShardRoutingState.RELOCATING) {
        rebalance++;
      }
    }
  }
  if (rebalance >= clusterConcurrentRebalance) {
    return false;
  }
  return true;
}
