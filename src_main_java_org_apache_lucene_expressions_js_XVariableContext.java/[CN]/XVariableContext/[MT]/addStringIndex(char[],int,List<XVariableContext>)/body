{
  ++i;
  int j=i;
  while (text[j] != '\'') {
    if (text[j] == '\\')     ++j;
    ++j;
  }
  StringBuffer buf=new StringBuffer(j - i);
  while (i < j) {
    if (text[i] == '\\')     ++i;
    buf.append(text[i]);
    ++i;
  }
  contexts.add(new XVariableContext(Type.STR_INDEX,buf.toString(),-1));
  return j + 1;
}
