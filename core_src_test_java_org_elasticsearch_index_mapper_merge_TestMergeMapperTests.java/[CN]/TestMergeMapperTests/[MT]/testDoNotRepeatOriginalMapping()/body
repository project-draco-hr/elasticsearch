{
  CompressedXContent mapping=new CompressedXContent(XContentFactory.jsonBuilder().startObject().startObject("type").startObject("_source").field("enabled",false).endObject().endObject().endObject().bytes());
  MapperService mapperService=createIndex("test").mapperService();
  mapperService.merge("type",mapping,true,false);
  CompressedXContent update=new CompressedXContent(XContentFactory.jsonBuilder().startObject().startObject("type").startObject("properties").startObject("foo").field("type","string").endObject().endObject().endObject().endObject().bytes());
  DocumentMapper mapper=mapperService.merge("type",update,false,false);
  assertNotNull(mapper.mappers().getMapper("foo"));
  assertFalse(mapper.sourceMapper().enabled());
}
