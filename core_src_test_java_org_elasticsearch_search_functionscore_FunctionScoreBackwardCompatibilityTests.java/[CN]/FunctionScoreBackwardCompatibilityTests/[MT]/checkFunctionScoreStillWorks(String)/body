{
  SearchResponse response=client().search(searchRequest().source(searchSource().query(functionScoreQuery(termQuery("text","value")).add(gaussDecayFunction("loc",new GeoPoint(10,20),"1000km")).add(scriptFunction("_index['text']['value'].tf()")).add(termQuery("text","boosted"),factorFunction(5))))).actionGet();
  assertSearchResponse(response);
  assertOrderedSearchHits(response,ids);
}
