{
  MetaData.Builder metaBuilder=MetaData.builder();
  IndexMetaData indexMetaData=IndexMetaData.builder(name).settings(settings(Version.CURRENT).put(settings)).numberOfShards(numShards).numberOfReplicas(numReplicas).build();
  metaBuilder.put(indexMetaData,false);
  MetaData metaData=metaBuilder.build();
  RoutingTable.Builder routingTableBuilder=RoutingTable.builder();
  routingTableBuilder.addAsNew(metaData.index(name));
  RoutingTable routingTable=routingTableBuilder.build();
  ClusterState clusterState=ClusterState.builder(org.elasticsearch.cluster.ClusterName.DEFAULT).metaData(metaData).routingTable(routingTable).blocks(ClusterBlocks.builder().addBlocks(indexMetaData)).build();
  return clusterState;
}
