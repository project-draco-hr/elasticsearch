{
  SnapshotsInProgress snapshots=clusterState.custom(SnapshotsInProgress.TYPE);
  if (snapshots != null) {
    for (    SnapshotsInProgress.Entry snapshot : snapshots.entries()) {
      if (repository.equals(snapshot.snapshotId().getRepository())) {
        return true;
      }
    }
  }
  return false;
}
