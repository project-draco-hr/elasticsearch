{
  assertAcked(prepareCreate("test").addMapping("parent").addMapping("child","_parent","type=parent"));
  ensureGreen();
  for (int i=0; i < 10; i++) {
    client().prepareIndex("test","parent",Integer.toString(i)).setSource("p_field",i).get();
  }
  for (int i=0; i < 10; i++) {
    client().prepareIndex("test","child",Integer.toString(i)).setSource("c_field",i).setParent("" + 0).get();
  }
  for (int i=0; i < 10; i++) {
    client().prepareIndex("test","child",Integer.toString(i + 10)).setSource("c_field",i + 10).setParent(Integer.toString(i)).get();
  }
  flushAndRefresh();
  for (int i=1; i <= 10; i++) {
    logger.info("Round {}",i);
    SearchResponse searchResponse=client().prepareSearch("test").setQuery(constantScoreQuery(queryFilter(topChildrenQuery("child",matchAllQuery())).cache(true))).execute().actionGet();
    assertNoFailures(searchResponse);
    searchResponse=client().prepareSearch("test").setQuery(constantScoreQuery(queryFilter(hasChildQuery("child",matchAllQuery()).scoreType("max")).cache(true))).get();
    assertNoFailures(searchResponse);
    searchResponse=client().prepareSearch("test").setQuery(constantScoreQuery(queryFilter(hasParentQuery("parent",matchAllQuery()).scoreType("score")).cache(true))).get();
    assertNoFailures(searchResponse);
  }
}
