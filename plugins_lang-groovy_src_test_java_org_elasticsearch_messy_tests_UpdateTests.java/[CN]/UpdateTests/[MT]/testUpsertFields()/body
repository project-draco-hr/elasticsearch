{
  createTestIndex();
  ensureGreen();
  UpdateResponse updateResponse=client().prepareUpdate(indexOrAlias(),"type1","1").setUpsert(XContentFactory.jsonBuilder().startObject().field("bar","baz").endObject()).setScript(new Script("ctx._source.extra = \"foo\"",ScriptService.ScriptType.INLINE,null,null)).setFields("_source").execute().actionGet();
  assertThat(updateResponse.getIndex(),equalTo("test"));
  assertThat(updateResponse.getGetResult(),notNullValue());
  assertThat(updateResponse.getGetResult().getIndex(),equalTo("test"));
  assertThat(updateResponse.getGetResult().sourceAsMap().get("bar").toString(),equalTo("baz"));
  assertThat(updateResponse.getGetResult().sourceAsMap().get("extra"),nullValue());
  updateResponse=client().prepareUpdate(indexOrAlias(),"type1","1").setUpsert(XContentFactory.jsonBuilder().startObject().field("bar","baz").endObject()).setScript(new Script("ctx._source.extra = \"foo\"",ScriptService.ScriptType.INLINE,null,null)).setFields("_source").execute().actionGet();
  assertThat(updateResponse.getIndex(),equalTo("test"));
  assertThat(updateResponse.getGetResult(),notNullValue());
  assertThat(updateResponse.getGetResult().getIndex(),equalTo("test"));
  assertThat(updateResponse.getGetResult().sourceAsMap().get("bar").toString(),equalTo("baz"));
  assertThat(updateResponse.getGetResult().sourceAsMap().get("extra").toString(),equalTo("foo"));
}
