{
  long iValue=dateMathParser().parse(value,now());
  long iSim;
  try {
    iSim=fuzziness.asTimeValue().millis();
  }
 catch (  Exception e) {
    iSim=fuzziness.asLong();
  }
  return NumericRangeQuery.newLongRange(names().indexName(),numericPrecisionStep(),iValue - iSim,iValue + iSim,true,true);
}
