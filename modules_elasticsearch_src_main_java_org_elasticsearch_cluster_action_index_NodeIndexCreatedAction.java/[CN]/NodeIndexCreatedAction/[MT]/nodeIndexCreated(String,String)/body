{
  DiscoveryNodes nodes=clusterService.state().nodes();
  if (nodes.localNodeMaster()) {
    threadPool.cached().execute(new Runnable(){
      @Override public void run(){
        innerNodeIndexCreated(index,nodeId);
      }
    }
);
  }
 else {
    transportService.sendRequest(clusterService.state().nodes().masterNode(),NodeIndexCreatedTransportHandler.ACTION,new NodeIndexCreatedMessage(index,nodeId),VoidTransportResponseHandler.INSTANCE_SAME);
  }
}
