{
  String snippet=get_snippet();
  StringBuilder where=new StringBuilder(" in \"");
  where.append(name);
  where.append("\", line ");
  where.append(line + 1);
  where.append(", column ");
  where.append(column + 1);
  if (snippet != null) {
    where.append(":\n");
    where.append(snippet);
  }
  return where.toString();
}
