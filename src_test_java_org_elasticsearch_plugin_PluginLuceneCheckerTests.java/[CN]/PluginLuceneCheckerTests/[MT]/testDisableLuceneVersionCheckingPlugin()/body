{
  String serverNodeId=SimpleNodesInfoTests.startNodeWithPlugins(settingsBuilder().put("plugins.check_lucene",false).put("plugins." + PluginsService.ES_PLUGIN_PROPERTIES_FILE_KEY,"es-plugin-test.properties").put("plugins." + PluginsService.LOAD_PLUGIN_FROM_CLASSPATH,true).build(),"/org/elasticsearch/plugin/lucene/");
  logger.info("--> server {} started" + serverNodeId);
  NodesInfoResponse response=client().admin().cluster().prepareNodesInfo().clear().setPlugins(true).execute().actionGet();
  logger.info("--> full json answer, status " + response.toString());
  ElasticsearchAssertions.assertNodeContainsPlugins(response,serverNodeId,Lists.newArrayList("old-lucene"),Lists.newArrayList("old"),Lists.newArrayList("1.0.0"),Collections.EMPTY_LIST,Collections.EMPTY_LIST,Collections.EMPTY_LIST);
}
