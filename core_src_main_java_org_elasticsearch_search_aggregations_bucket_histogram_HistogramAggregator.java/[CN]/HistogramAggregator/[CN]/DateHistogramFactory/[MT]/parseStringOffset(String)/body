{
  if (offset.charAt(0) == '-') {
    return -TimeValue.parseTimeValue(offset.substring(1),null,DateHistogramFactory.class.getSimpleName() + ".parseOffset").millis();
  }
  int beginIndex=offset.charAt(0) == '+' ? 1 : 0;
  return TimeValue.parseTimeValue(offset.substring(beginIndex),null,DateHistogramFactory.class.getSimpleName() + ".parseOffset").millis();
}
