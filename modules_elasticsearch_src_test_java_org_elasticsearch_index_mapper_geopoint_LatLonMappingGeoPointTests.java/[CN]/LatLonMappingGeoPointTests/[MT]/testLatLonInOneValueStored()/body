{
  String mapping=XContentFactory.jsonBuilder().startObject().startObject("type").startObject("properties").startObject("point").field("type","geo_point").field("lat_lon",true).field("store","yes").endObject().endObject().endObject().endObject().string();
  DocumentMapper defaultMapper=MapperTests.newParser().parse(mapping);
  ParsedDocument doc=defaultMapper.parse("type","1",XContentFactory.jsonBuilder().startObject().field("point","1.2,1.3").endObject().copiedBytes());
  assertThat(doc.doc().getFieldable("point.lat"),notNullValue());
  assertThat(doc.doc().getFieldable("point.lat").getBinaryValue(),equalTo(Numbers.doubleToBytes(1.2)));
  assertThat(doc.doc().getFieldable("point.lon"),notNullValue());
  assertThat(doc.doc().getFieldable("point.lon").getBinaryValue(),equalTo(Numbers.doubleToBytes(1.3)));
  assertThat(doc.doc().get("point"),equalTo("1.2,1.3"));
}
