{
  super(type);
  this.lookup=lookup;
  this.name=name;
  this.flavor=flavor;
  this.args=args;
  if (flavor == UNARY_OPERATOR || flavor == BINARY_OPERATOR || flavor == SHIFT_OPERATOR) {
    depth=MAX_DEPTH - 1;
  }
  final MethodHandle fallback=FALLBACK.bindTo(this).asCollector(Object[].class,type.parameterCount()).asType(type);
  setTarget(fallback);
}
