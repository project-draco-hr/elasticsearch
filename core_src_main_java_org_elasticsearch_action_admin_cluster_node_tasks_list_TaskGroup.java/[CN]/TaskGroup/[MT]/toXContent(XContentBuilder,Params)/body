{
  task.toXContent(builder,params);
  if (childTasks.isEmpty() == false) {
    builder.startArray("children");
    for (    TaskGroup taskGroup : childTasks) {
      builder.startObject();
      taskGroup.toXContent(builder,params);
      builder.endObject();
    }
    builder.endArray();
  }
  return builder;
}
