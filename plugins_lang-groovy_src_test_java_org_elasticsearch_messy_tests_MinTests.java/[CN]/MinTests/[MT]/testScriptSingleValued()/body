{
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(min("min").script(new Script("doc['value'].value"))).execute().actionGet();
  assertHitCount(searchResponse,10);
  Min min=searchResponse.getAggregations().get("min");
  assertThat(min,notNullValue());
  assertThat(min.getName(),equalTo("min"));
  assertThat(min.getValue(),equalTo(1.0));
}
