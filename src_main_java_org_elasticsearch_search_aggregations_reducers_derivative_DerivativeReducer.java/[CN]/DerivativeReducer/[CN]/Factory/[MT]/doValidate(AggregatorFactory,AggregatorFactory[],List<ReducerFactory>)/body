{
  if (bucketsPaths.length != 1) {
    throw new ElasticsearchIllegalStateException(Reducer.Parser.BUCKETS_PATH.getPreferredName() + " must contain a single entry for reducer [" + name+ "]");
  }
  if (!(parent instanceof HistogramAggregator.Factory)) {
    throw new ElasticsearchIllegalStateException("derivative reducer [" + name + "] must have a histogram or date_histogram as parent");
  }
 else {
    HistogramAggregator.Factory histoParent=(HistogramAggregator.Factory)parent;
    if (histoParent.minDocCount() != 0) {
      throw new ElasticsearchIllegalStateException("parent histogram of derivative reducer [" + name + "] must have min_doc_count of 0");
    }
  }
}
