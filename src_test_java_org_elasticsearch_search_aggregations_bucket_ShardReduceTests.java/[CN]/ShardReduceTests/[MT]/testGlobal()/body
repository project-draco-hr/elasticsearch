{
  SearchResponse response=client().prepareSearch("idx").setQuery(QueryBuilders.matchAllQuery()).addAggregation(global("global").subAggregation(dateHistogram("histo").field("date").interval(DateHistogramInterval.DAY).minDocCount(0))).execute().actionGet();
  assertSearchResponse(response);
  Global global=response.getAggregations().get("global");
  Histogram histo=global.getAggregations().get("histo");
  assertThat(histo.getBuckets().size(),equalTo(4));
}
