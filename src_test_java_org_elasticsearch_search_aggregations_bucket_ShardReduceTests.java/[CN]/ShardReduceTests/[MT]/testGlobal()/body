{
  SearchResponse response=client().prepareSearch("idx").setQuery(QueryBuilders.matchAllQuery()).addAggregation(global("global").subAggregation(dateHistogram("histo").field("date").interval(DateHistogram.Interval.DAY).minDocCount(0))).execute().actionGet();
  assertSearchResponse(response);
  Global global=response.getAggregations().get("global");
  DateHistogram histo=global.getAggregations().get("histo");
  assertThat(histo.buckets().size(),equalTo(4));
}
