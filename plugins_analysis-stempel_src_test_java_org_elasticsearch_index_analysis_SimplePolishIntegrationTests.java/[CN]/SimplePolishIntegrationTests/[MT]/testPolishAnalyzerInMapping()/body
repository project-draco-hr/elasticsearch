{
  final XContentBuilder mapping=jsonBuilder().startObject().startObject("type").startObject("properties").startObject("foo").field("type","string").field("analyzer","polish").endObject().endObject().endObject().endObject();
  client().admin().indices().prepareCreate("test").addMapping("type",mapping).get();
  index("test","type","1","foo","wirtualna polska");
  ensureYellow();
}
