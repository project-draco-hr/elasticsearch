{
  int sigDigits=randomSignificantDigits();
  SearchResponse searchResponse=client().prepareSearch("empty_bucket_idx").setQuery(matchAllQuery()).addAggregation(histogram("histo").field("value").interval(1l).minDocCount(0).subAggregation(percentiles("percentiles").numberOfSignificantValueDigits(sigDigits).method(PercentilesMethod.HDR).percentiles(10,15))).execute().actionGet();
  assertThat(searchResponse.getHits().getTotalHits(),equalTo(2l));
  Histogram histo=searchResponse.getAggregations().get("histo");
  assertThat(histo,notNullValue());
  Histogram.Bucket bucket=histo.getBuckets().get(1);
  assertThat(bucket,notNullValue());
  Percentiles percentiles=bucket.getAggregations().get("percentiles");
  assertThat(percentiles,notNullValue());
  assertThat(percentiles.getName(),equalTo("percentiles"));
  assertThat(percentiles.percentile(10),equalTo(Double.NaN));
  assertThat(percentiles.percentile(15),equalTo(Double.NaN));
}
