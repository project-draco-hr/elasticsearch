{
  final double[] pcts=randomPercentiles();
  int sigDigits=randomSignificantDigits();
  SearchResponse searchResponse=client().prepareSearch("idx").setQuery(matchAllQuery()).addAggregation(percentiles("percentiles").numberOfSignificantValueDigits(sigDigits).method(PercentilesMethod.HDR).script(new Script("doc['value'].value",ScriptType.INLINE,AggregationTestScriptsPlugin.NAME,emptyMap())).percentiles(pcts)).execute().actionGet();
  assertHitCount(searchResponse,10);
  final Percentiles percentiles=searchResponse.getAggregations().get("percentiles");
  assertConsistent(pcts,percentiles,minValue,maxValue,sigDigits);
}
