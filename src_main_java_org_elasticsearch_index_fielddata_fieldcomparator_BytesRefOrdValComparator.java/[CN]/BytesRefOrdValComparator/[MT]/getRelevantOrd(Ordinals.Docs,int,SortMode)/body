{
  Ordinals.Docs.Iter iter=readerOrds.getIter(docId);
  long currentVal=iter.next();
  if (currentVal == 0) {
    return 0;
  }
  long relevantVal=currentVal;
  while (true) {
    if (sortMode == SortMode.MAX) {
      if (currentVal > relevantVal) {
        relevantVal=currentVal;
      }
    }
 else {
      if (currentVal < relevantVal) {
        relevantVal=currentVal;
      }
    }
    currentVal=iter.next();
    if (currentVal == 0) {
      break;
    }
  }
  return relevantVal;
}
