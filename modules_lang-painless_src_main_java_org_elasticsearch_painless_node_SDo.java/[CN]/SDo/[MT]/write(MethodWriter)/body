{
  writer.writeStatementOffset(offset);
  Label start=new Label();
  Label begin=new Label();
  Label end=new Label();
  writer.mark(start);
  block.continu=begin;
  block.brake=end;
  block.write(writer);
  writer.mark(begin);
  condition.fals=end;
  condition.write(writer);
  writer.writeLoopCounter(loopCounterSlot,Math.max(1,block.statementCount),offset);
  writer.goTo(start);
  writer.mark(end);
}
