{
  StringBuilder sb=new StringBuilder();
  char[] values=value.toCharArray();
  for (int i=0; i < values.length; i++) {
    if (Character.isUpperCase(values[i])) {
      sb.append('_');
      sb.append(Character.toLowerCase(values[i]));
    }
 else {
      sb.append(values[i]);
    }
  }
  return sb.toString();
}
