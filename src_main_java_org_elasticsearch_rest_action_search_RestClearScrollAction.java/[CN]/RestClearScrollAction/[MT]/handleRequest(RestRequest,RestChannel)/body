{
  String scrollIds=request.param("scroll_id");
  if (scrollIds == null) {
    scrollIds=RestActions.getRestContent(request).toUtf8();
  }
  ClearScrollRequest clearRequest=new ClearScrollRequest();
  clearRequest.setScrollIds(Arrays.asList(splitScrollIds(scrollIds)));
  client.clearScroll(clearRequest,new RestBuilderListener<ClearScrollResponse>(channel){
    @Override public RestResponse buildResponse(    ClearScrollResponse response,    XContentBuilder builder) throws Exception {
      builder.startObject();
      builder.endObject();
      return new BytesRestResponse(OK,builder);
    }
  }
);
}
